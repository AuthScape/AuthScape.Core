<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>AuthScape.MCP</PackageId>
    <Version>1.0.0</Version>
    <Authors>ZuechB</Authors>
    <Company>ZuechB</Company>
    <Product>AuthScape MCP Server</Product>
    <Description>MCP (Model Context Protocol) server for AuthScape CMS. Allows Claude Desktop to create and manage web pages.</Description>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>authscape-mcp</ToolCommandName>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>


</Project>
