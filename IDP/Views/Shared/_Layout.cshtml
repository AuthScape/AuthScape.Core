@{
    Layout = null; // this is a standalone layout
    var title = ViewData["Title"] as string ?? "Manage your account";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Auth Server</title>

    <!-- your existing includes -->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />

    @RenderSection("Styles", required: false)

    @using Microsoft.AspNetCore.Identity
    @using AuthScape.Models.Users
    @inject SignInManager<AppUser> SignInManager
    @inject UserManager<AppUser> UserManager

    <style>
        /* Sleek polish; no forms here */
        body {
            background: var(--bs-body-bg, #fff);
        }

        .glass-card {
            background: rgba(255,255,255,.65);
            backdrop-filter: saturate(160%) blur(10px);
            border: 1px solid rgba(0,0,0,.06);
            border-radius: .75rem;
        }

        .manage-header {
            border-bottom: 1px solid rgba(0,0,0,.08);
        }

        .sidebar .list-group-item {
            border: 0;
            border-left: 3px solid transparent;
            border-radius: .5rem;
            margin-bottom: .25rem;
        }

        .sidebar .list-group-item.active {
            background: #12d48a; /* your green brand color */
            border-left-color: #12d48a;
            color: #fff;
        }

        .content-pad {
            padding: 1.25rem;
            width: 100%;
        }

        .sticky-actions {
            position: sticky;
            bottom: 0;
            z-index: 5;
            background: var(--bs-body-bg, #fff);
            border-top: 1px solid rgba(0,0,0,.08);
        }

        .top-nav {
            background: white;
            border-bottom: 1px solid rgba(0,0,0,.08);
            padding: 0.75rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .top-nav .brand {
            font-size: 1.25rem;
            font-weight: 700;
            color: #12d48a;
            text-decoration: none;
        }

        .top-nav .nav-actions {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .top-nav .user-info {
            font-size: 0.875rem;
            color: #666;
        }

        .top-nav .btn-logout {
            background: #dc3545;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            cursor: pointer;
            transition: background 0.2s;
        }

        .top-nav .btn-logout:hover {
            background: #c82333;
        }
    </style>
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <nav class="top-nav">
            <a href="/" class="brand">AuthScape</a>
            <div class="nav-actions">
                <span class="user-info">@User.Identity?.Name</span>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" style="margin: 0;">
                    <button type="submit" class="btn-logout">
                        <i class="fa fa-sign-out"></i> Sign Out
                    </button>
                </form>
            </div>
        </nav>
    }
    <div class="container-fluid my-4">
        <div class="row g-4">
            <section class="col-12 col-md-12">
                <div class="content-pad">
                    @RenderBody()
                </div>
            </section>
        </div>
    </div>

    <!-- scripts (unchanged from your layout) -->
    <script src="~/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/bootstrap/js/popper.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/lib/qrcode.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
