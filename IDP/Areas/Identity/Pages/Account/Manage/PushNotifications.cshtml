                    <div class="device-details">Last active: 2 hours ago</div>
                </div>
                <div class="device-status">Active</div>
            </div>

            <div class="device-item">
                <div class="device-icon">ðŸ’»</div>
                <div class="device-info">
                    <div class="device-name">Chrome on Windows</div>
                    <div class="device-details">Last active: Currently active</div>
                </div>
                <div class="device-status">Active</div>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn-primary-custom">
                Save Preferences
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function requestNotificationPermission() {
            if (!("Notification" in window)) {
                alert("This browser does not support push notifications.");
                return;
            }

            Notification.requestPermission().then(function(permission) {
                if (permission === "granted") {
                    new Notification("Push notifications enabled!", {
                        body: "You'll now receive push notifications from this site.",
                        icon: "/icon.png"
                    });
                } else if (permission === "denied") {
                    alert("Push notifications have been blocked. Please enable them in your browser settings.");
                }
            });
        }

        // Check notification permission on page load
        if ("Notification" in window) {
            if (Notification.permission === "granted") {
                console.log("Notifications are enabled");
            }
        }
    </script>
}
