                <div class="notification-info">
                    <div class="notification-title">Maintenance notifications</div>
                    <div class="notification-description">Be informed about scheduled maintenance windows</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="Maintenance" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

