@page "/Email"
@model EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
        }

        .page-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .form-group-custom {
            margin-bottom: 1.5rem;
        }

        .form-label-custom {
            display: block;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: white;
        }

        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-control-custom:disabled {
            background-color: #f7fafc;
            color: #718096;
            cursor: not-allowed;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.875rem 2.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(102, 126, 234, 0.5);
        }

        .btn-secondary-custom {
            background: white;
            border: 2px solid #667eea;
            color: #667eea;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-secondary-custom:hover {
            background: #667eea;
            color: white;
        }

        .help-text {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 0.375rem;
        }

        .verified-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #d1fae5;
            color: #065f46;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .unverified-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #fef3c7;
            color: #92400e;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .input-with-badge {
            position: relative;
        }

        .input-badge {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #10b981;
            font-size: 1.25rem;
        }
    </style>
}

<div class="page-header">
    <h2 class="mb-1" style="font-size: 2rem; font-weight: 700;">Email Management</h2>
    <p class="mb-0" style="opacity: 0.9;">Update your email address and manage verification</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="email-form" method="post">
    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Current Email</h3>

            <div class="form-group-custom">
                <label asp-for="Email" class="form-label-custom">Email Address</label>
                <div class="input-with-badge">
                    <input asp-for="Email" class="form-control-custom" disabled />
                    @if (Model.IsEmailConfirmed)
                    {
                        <span class="input-badge">✓</span>
                    }
                </div>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="verified-badge">
                        <span>✓</span>
                        <span>Verified</span>
                    </div>
                }
                else
                {
                    <div class="unverified-badge">
                        <span>!</span>
                        <span>Not Verified</span>
                    </div>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn-secondary-custom mt-2">
                        Send Verification Email
                    </button>
                }
                <p class="help-text">This is your primary email address for account communications</p>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Change Email Address</h3>

            <div class="form-group-custom">
                <label asp-for="Input.NewEmail" class="form-label-custom">New Email Address</label>
                <input asp-for="Input.NewEmail" class="form-control-custom" autocomplete="email" aria-required="true" placeholder="Enter your new email address" />
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                <p class="help-text">You'll receive a verification email at this address before the change takes effect</p>
            </div>

            <div class="d-flex justify-content-end">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn-primary-custom">
                    Update Email
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
