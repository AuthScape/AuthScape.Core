@page "/ExternalLogins"
@model ExternalLoginsModel
@{
    ViewData["Title"] = "External Logins";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

@section Styles {
    <style>
        .security-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
        }

        .security-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .help-text {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 0.375rem;
        }

        .form-label-custom {
            display: block;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* External Logins Styling */
        .connected-account {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.25rem;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
        }

        .connected-account:hover {
            border-color: #cbd5e0;
            background: #f1f5f9;
        }

        .account-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .provider-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: white;
            font-size: 1.125rem;
        }

        .provider-icon.google {
            background: #4285F4;
        }

        .provider-icon.microsoft {
            background: #00A4EF;
        }

        .provider-icon.facebook {
            background: #1877F2;
        }

        .provider-icon.twitter {
            background: #1DA1F2;
        }

        .provider-icon.github {
            background: #181717;
        }

        .provider-icon.apple {
            background: #000000;
        }

        .provider-icon.linkedin {
            background: #0A66C2;
        }

        .provider-icon.default {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .account-details {
            display: flex;
            flex-direction: column;
        }

        .account-name {
            font-weight: 600;
            color: #1a202c;
            font-size: 1rem;
        }

        .account-status {
            font-size: 0.875rem;
            color: #10b981;
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .status-dot {
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
        }

        .btn-remove {
            background: white;
            border: 2px solid #ef4444;
            color: #ef4444;
            padding: 0.5rem 1.25rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-remove:hover {
            background: #ef4444;
            color: white;
        }

        .btn-add-provider {
            width: 100%;
            padding: 0.875rem 1.5rem;
            border: 2px dashed #cbd5e0;
            background: white;
            color: #4a5568;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .btn-add-provider:hover {
            border-color: #667eea;
            color: #667eea;
            background: #f8f9ff;
        }

        .btn-add-provider .provider-icon {
            width: 32px;
            height: 32px;
            font-size: 0.95rem;
        }

        .no-logins-message {
            text-align: center;
            padding: 2rem;
            color: #718096;
            font-size: 0.95rem;
        }

        .warning-box {
            background: #fef3c7;
            border: 2px solid #fbbf24;
            border-radius: 8px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .warning-icon {
            color: #f59e0b;
            font-size: 1.25rem;
            font-weight: bold;
        }

        .warning-content {
            flex: 1;
        }

        .warning-title {
            font-weight: 600;
            color: #92400e;
            margin-bottom: 0.25rem;
        }

        .warning-text {
            color: #92400e;
            font-size: 0.875rem;
            margin: 0;
        }
    </style>
}

<div class="security-header">
    <h2 class="mb-1" style="font-size: 2rem; font-weight: 700;">External Logins</h2>
    <p class="mb-0" style="opacity: 0.9;">Manage third-party authentication providers for your account</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="security-card">
    <div class="form-section">
        <h3 class="form-section-title">Connected Accounts</h3>
        <p class="help-text mb-3">These external accounts are linked to your profile and can be used to sign in</p>

        @if (Model.CurrentLogins?.Count > 0)
        {
            @if (!Model.ShowRemoveButton)
            {
                <div class="warning-box">
                    <div class="warning-icon">⚠</div>
                    <div class="warning-content">
                        <div class="warning-title">Last Login Method</div>
                        <p class="warning-text">You cannot remove your last login method. Please set a password or add another external login first.</p>
                    </div>
                </div>
            }

            foreach (var login in Model.CurrentLogins)
            {
                var providerLower = login.LoginProvider.ToLower();
                var iconClass = "default";
                var providerInitial = login.LoginProvider.Substring(0, 1).ToUpper();

                if (providerLower.Contains("google")) { iconClass = "google"; providerInitial = "G"; }
                else if (providerLower.Contains("microsoft")) { iconClass = "microsoft"; providerInitial = "M"; }
                else if (providerLower.Contains("facebook")) { iconClass = "facebook"; providerInitial = "F"; }
                else if (providerLower.Contains("twitter")) { iconClass = "twitter"; providerInitial = "T"; }
                else if (providerLower.Contains("github")) { iconClass = "github"; providerInitial = "G"; }
                else if (providerLower.Contains("apple")) { iconClass = "apple"; providerInitial = "A"; }
                else if (providerLower.Contains("linkedin")) { iconClass = "linkedin"; providerInitial = "L"; }

                <div class="connected-account">
                    <div class="account-info">
                        <div class="provider-icon @iconClass">@providerInitial</div>
                        <div class="account-details">
                            <div class="account-name">@login.ProviderDisplayName</div>
                            <div class="account-status">
                                <span class="status-dot"></span>
                                Connected
                            </div>
                        </div>
                    </div>
                    @if (Model.ShowRemoveButton)
                    {
                        <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post" style="margin: 0;">
                            <input type="hidden" name="LoginProvider" value="@login.LoginProvider" />
                            <input type="hidden" name="ProviderKey" value="@login.ProviderKey" />
                            <button type="submit" class="btn-remove" onclick="return confirm('Are you sure you want to remove this @login.ProviderDisplayName login?');">
                                Remove
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="help-text" style="margin: 0;">Required</span>
                    }
                </div>
            }
        }
        else
        {
            <div class="no-logins-message">
                <p>No external accounts connected yet.</p>
                <p>Connect your accounts below for easier sign-in.</p>
            </div>
        }
    </div>
</div>

@if (Model.OtherLogins?.Count > 0)
{
    <div class="security-card">
        <div class="form-section">
            <h3 class="form-section-title">Available Providers</h3>
            <p class="help-text mb-3">Add another service to sign in with. You can use any of these to access your account.</p>

            <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                @foreach (var provider in Model.OtherLogins)
                {
                    var providerLower = provider.Name.ToLower();
                    var iconClass = "default";
                    var providerInitial = provider.DisplayName.Substring(0, 1).ToUpper();

                    if (providerLower.Contains("google")) { iconClass = "google"; providerInitial = "G"; }
                    else if (providerLower.Contains("microsoft")) { iconClass = "microsoft"; providerInitial = "M"; }
                    else if (providerLower.Contains("facebook")) { iconClass = "facebook"; providerInitial = "F"; }
                    else if (providerLower.Contains("twitter")) { iconClass = "twitter"; providerInitial = "T"; }
                    else if (providerLower.Contains("github")) { iconClass = "github"; providerInitial = "G"; }
                    else if (providerLower.Contains("apple")) { iconClass = "apple"; providerInitial = "A"; }
                    else if (providerLower.Contains("linkedin")) { iconClass = "linkedin"; providerInitial = "L"; }

                    <button id="@($"link-login-button-{provider.Name}")" type="submit" name="provider" value="@provider.Name" class="btn-add-provider" title="Connect your @provider.DisplayName account">
                        <div class="provider-icon @iconClass">@providerInitial</div>
                        <span>Connect @provider.DisplayName</span>
                    </button>
                }
            </form>
        </div>
    </div>
}
