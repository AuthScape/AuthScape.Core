@page "/TwoFactorAuthentication"
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

@section Styles {
<style>
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
    }

    .profile-header h2,
    .profile-header p {
        color: white;
    }

    .profile-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .form-section-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: #1a202c;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e2e8f0;
    }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 0.875rem 2.5rem;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(102, 126, 234, 0.5);
    }

    .btn-remove {
        background: white;
        border: 2px solid #ef4444;
        color: #ef4444;
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-remove:hover {
        background: #ef4444;
        color: white;
    }

    .security-status {
        background: var(--gray-50);
        border-radius: var(--border-radius-lg);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border-left: 4px solid var(--success-color);
    }

    .security-status.warning {
        border-left-color: var(--warning-color);
    }

    .security-status.danger {
        border-left-color: var(--danger-color);
    }

    .security-status-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .security-status-title {
        font-weight: 600;
        font-size: 1rem;
        color: var(--gray-900);
    }

    .security-status-message {
        color: var(--gray-600);
        font-size: 0.95rem;
        line-height: 1.5;
        margin-left: 2rem;
    }

    .security-status-message a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
    }

    .security-status-message a:hover {
        text-decoration: underline;
    }

    .auth-method-card {
        background: white;
        border: 2px solid var(--gray-200);
        border-radius: var(--border-radius-lg);
        padding: 1.75rem;
        margin-bottom: 1rem;
        transition: all var(--transition-base);
    }

    .auth-method-card:hover {
        border-color: var(--primary-color);
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .auth-method-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .auth-method-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--border-radius-md);
        background: var(--primary-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
    }

    .auth-method-info h3 {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--gray-900);
        margin: 0 0 0.25rem 0;
    }

    .auth-method-info p {
        font-size: 0.875rem;
        color: var(--gray-500);
        margin: 0;
    }

    .auth-method-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .recovery-codes-info {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        border: 2px solid rgba(102, 126, 234, 0.2);
        border-radius: var(--border-radius-lg);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .recovery-codes-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .recovery-codes-header svg {
        flex-shrink: 0;
    }

    .recovery-codes-count {
        font-size: 2rem;
        font-weight: 700;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .recovery-codes-label {
        font-size: 0.875rem;
        color: var(--gray-600);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .privacy-notice {
        background: var(--danger-light);
        border: 2px solid var(--danger-color);
        border-radius: var(--border-radius-lg);
        padding: 1.75rem;
        color: #991b1b;
    }

    .privacy-notice-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    .privacy-notice-title {
        font-weight: 600;
        font-size: 1.125rem;
        color: #991b1b;
        margin: 0;
    }

    .privacy-notice p {
        margin: 0;
        line-height: 1.5;
    }
</style>
}

<div class="profile-header">
    <h2 class="mb-1" style="font-size: 2rem; font-weight: 700;">Two-Factor Authentication</h2>
    <p class="mb-0" style="opacity: 0.9;">Add an extra layer of security to your account with 2FA</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        <!-- 2FA Status Card -->
        <div class="profile-card">
            <h3 class="form-section-title">Security Status</h3>

            @if (Model.Is2faEnabled)
            {
                <span class="badge badge-success badge-dot">Enabled</span>

                <!-- Recovery Codes Status -->
                @if (Model.RecoveryCodesLeft == 0)
                {
                    <div class="security-status danger">
                        <div class="security-status-header">
                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="color: var(--danger-color);">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                            <strong class="security-status-title">You have no recovery codes left</strong>
                        </div>
                        <p class="security-status-message">
                            You must <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a> before you can log in with a recovery code.
                        </p>
                    </div>
                }
                else if (Model.RecoveryCodesLeft == 1)
                {
                    <div class="security-status danger">
                        <div class="security-status-header">
                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="color: var(--danger-color);">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                            <strong class="security-status-title">You have 1 recovery code left</strong>
                        </div>
                        <p class="security-status-message">
                            You can <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.
                        </p>
                    </div>
                }
                else if (Model.RecoveryCodesLeft <= 3)
                {
                    <div class="security-status warning">
                        <div class="security-status-header">
                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16" style="color: var(--warning-color);">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                            <strong class="security-status-title">You have @Model.RecoveryCodesLeft recovery codes left</strong>
                        </div>
                        <p class="security-status-message">
                            You should <a asp-page="./GenerateRecoveryCodes">generate a new set of recovery codes</a>.
                        </p>
                    </div>
                }
                else
                {
                    <div class="recovery-codes-info">
                        <div class="recovery-codes-header">
                            <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16" style="color: var(--primary-color);">
                                <path d="M1 2.5A1.5 1.5 0 0 1 2.5 1h3A1.5 1.5 0 0 1 7 2.5v3A1.5 1.5 0 0 1 5.5 7h-3A1.5 1.5 0 0 1 1 5.5v-3zm8 0A1.5 1.5 0 0 1 10.5 1h3A1.5 1.5 0 0 1 15 2.5v3A1.5 1.5 0 0 1 13.5 7h-3A1.5 1.5 0 0 1 9 5.5v-3zm-8 8A1.5 1.5 0 0 1 2.5 9h3A1.5 1.5 0 0 1 7 10.5v3A1.5 1.5 0 0 1 5.5 15h-3A1.5 1.5 0 0 1 1 13.5v-3zm8 0A1.5 1.5 0 0 1 10.5 9h3a1.5 1.5 0 0 1 1.5 1.5v3a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 13.5v-3z"/>
                            </svg>
                            <div>
                                <div class="recovery-codes-count">@Model.RecoveryCodesLeft</div>
                                <div class="recovery-codes-label">Recovery Codes Available</div>
                            </div>
                        </div>
                        <p style="margin: 0; color: var(--gray-600); font-size: 0.875rem;">
                            Recovery codes allow you to access your account if you lose access to your authenticator device.
                        </p>
                    </div>
                }

                <!-- Quick Actions -->
                <div class="d-flex gap-2 flex-wrap" style="margin-bottom: 1.5rem;">
                    @if (Model.IsMachineRemembered)
                    {
                        <form method="post" style="display: inline-block;">
                            <button type="submit" class="btn btn-secondary">
                                <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                                </svg>
                                Forget this browser
                            </button>
                        </form>
                    }
                    <a asp-page="./Disable2fa" class="btn btn-danger">
                        <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                        </svg>
                        Disable 2FA
                    </a>
                    <a asp-page="./GenerateRecoveryCodes" class="btn btn-outline">
                        <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                            <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                        </svg>
                        Reset recovery codes
                    </a>
                </div>
            }
        </div>

        <!-- Authenticator App Card -->
        <div class="profile-card">
            <div class="auth-method-card">
                <div class="auth-method-header">
                    <div class="auth-method-icon">
                        <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M11 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h6zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z"/>
                            <path d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                        </svg>
                    </div>
                    <div class="auth-method-info">
                        <h3>Authenticator App</h3>
                        <p>Use an authenticator app to generate verification codes</p>
                    </div>
                </div>

                @if (!Model.HasAuthenticator)
                {
                    <div style="background: var(--gray-50); border-radius: var(--border-radius-md); padding: 1rem; margin-bottom: 1rem;">
                        <p style="margin: 0; color: var(--gray-600); font-size: 0.9rem;">
                            Add an authenticator app like Google Authenticator, Microsoft Authenticator, or Authy to generate secure verification codes.
                        </p>
                    </div>
                    <div class="auth-method-actions">
                        <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">
                            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            Add authenticator app
                        </a>
                    </div>
                }
                else
                {
                    @if (Model.Is2faEnabled)
                    {
                        <div style="background: var(--success-light); border-radius: var(--border-radius-md); padding: 1rem; margin-bottom: 1rem; border-left: 3px solid var(--success-color);">
                            <p style="margin: 0; color: #065f46; font-size: 0.9rem; font-weight: 500;">
                                <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle; margin-right: 0.5rem;">
                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                                </svg>
                                Authenticator app is configured and active
                            </p>
                        </div>
                    }
                    else
                    {
                        <div style="background: var(--gray-50); border-radius: var(--border-radius-md); padding: 1rem; margin-bottom: 1rem;">
                            <p style="margin: 0; color: var(--gray-600); font-size: 0.9rem;">
                                You have an authenticator key but haven't completed the setup. Click "Set up authenticator app" to finish enabling 2FA.
                            </p>
                        </div>
                    }
                    <div class="auth-method-actions">
                        <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-outline">
                            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                            </svg>
                            Set up authenticator app
                        </a>
                        <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-secondary">
                            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                                <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                            </svg>
                            Reset authenticator app
                        </a>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Privacy Notice -->
        <div class="profile-card">
            <div class="privacy-notice">
                <div class="privacy-notice-header">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
                    </svg>
                    <h3 class="privacy-notice-title">Privacy Policy Required</h3>
                </div>
                <p>
                    You must accept the privacy and cookie policy before you can enable two-factor authentication.
                    This helps us provide you with the best security features while respecting your privacy choices.
                </p>
            </div>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
