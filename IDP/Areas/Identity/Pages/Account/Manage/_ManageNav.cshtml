@using AuthScape.Models.Users;
@inject SignInManager<AppUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<style>
    .manage-nav {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .nav-section-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--gray-500);
        padding: 1rem 0 0.5rem;
        margin-top: 1rem;
    }

    .nav-section-title:first-child {
        margin-top: 0;
        padding-top: 0;
    }

    .manage-nav .nav-item {
        margin-bottom: 0.25rem;
    }

    .manage-nav .nav-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        color: var(--gray-700);
        font-size: 0.9375rem;
        font-weight: 500;
        transition: all 0.15s ease;
        border: 2px solid transparent;
    }

    .manage-nav .nav-link:hover {
        background: var(--gray-100);
        color: var(--gray-900);
    }

    .manage-nav .nav-link.active,
    .manage-nav .nav-link[aria-current="page"] {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        color: var(--primary-color);
        font-weight: 600;
        border-color: var(--primary-color);
    }

    .manage-nav .nav-link i {
        font-size: 1.125rem;
        flex-shrink: 0;
        width: 20px;
        text-align: center;
    }
</style>

<ul class="manage-nav">

    <!-- Profile & Identity -->
    <li class="nav-section-title">Profile &amp; Identity</li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fa fa-user"></i>Profile
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">
            <i class="fa fa-envelope-o"></i>Email
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fa fa-key"></i>Password
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-logins" asp-page="./ExternalLogins">
                <i class="fa fa-external-link"></i>External logins
            </a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.LanguageRegionTimeZoneNavClass(ViewContext)" id="language-region" asp-page="./LanguageRegion">
            <i class="fa fa-language"></i>Language &amp; Region &amp; Time zone
        </a>
    </li>

    <!-- Security -->
    <li class="nav-section-title mt-3">Security</li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">
            <i class="fa fa-shield"></i>Two-factor authentication
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login-alerts" asp-page="./LoginAlerts">
            <i class="fa fa-bell"></i>Login alerts
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" id="external-logins-security" asp-page="./ExternalLogins">
            <i class="fa fa-external-link"></i>External Logins
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PassKeyAuthenticationNavClass(ViewContext)" id="passkey" asp-page="./PassKeyAuthentication">
            <i class="fa fa-user-secret"></i>PassKey
        </a>
    </li>

    <!-- Data & Privacy -->
    <li class="nav-section-title mt-3">Data &amp; Privacy</li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">
            <i class="fa fa-database"></i>Personal data
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="connected-apps" asp-page="./ConnectedApps">
            <i class="fa fa-plug"></i>Connected apps
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="activity-history" asp-page="./ActivityHistory">
            <i class="fa fa-history"></i>Activity history
        </a>
    </li>

    <!-- Billing & Subscriptions -->
    <li class="nav-section-title mt-3">Billing &amp; Subscriptions</li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PaymentMethodsClass(ViewContext)" id="payment-methods" asp-page="./Wallet">
            <i class="fa fa-credit-card"></i>Payment methods
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.SubscriptionsNavClass(ViewContext)" id="subscriptions" asp-page="./Subscriptions">
            <i class="fa fa-star"></i>Subscriptions
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.BillingHistoryNavClass(ViewContext)" id="billing-history" asp-page="./BillingHistory">
            <i class="fa fa-file-text-o"></i>Billing history / Invoices
        </a>
    </li>

    <!-- Notifications -->
    <li class="nav-section-title mt-3">Notifications</li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNotificationsNavClass(ViewContext)" id="email-notifications" asp-page="./EmailNotifications">
            <i class="fa fa-envelope-o"></i>Email notifications
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PushNotificationsNavClass(ViewContext)" id="push-notifications" asp-page="./PushNotifications">
            <i class="fa fa-mobile"></i>Push notifications
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.SmsAlertsNavClass(ViewContext)" id="sms-alerts" asp-page="./SmsAlerts">
            <i class="fa fa-commenting-o"></i>SMS alerts
        </a>
    </li>

    @if (User.IsInRole("Admin"))
    {
        <!-- Administration -->
        <li class="nav-section-title mt-3">Administration</li>
        <li class="nav-item">
            <a class="nav-link" href="/Admin">
                <i class="fa fa-cog"></i>Admin Dashboard
            </a>
        </li>
    }

</ul>
