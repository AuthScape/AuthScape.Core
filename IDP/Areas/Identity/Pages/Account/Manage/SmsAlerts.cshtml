@page "/SmsAlerts"
@model SmsAlertsModel
@{
    ViewData["Title"] = "SMS Alerts";
    ViewData["ActivePage"] = "SmsAlerts";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
        }

        .page-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .form-group-custom {
            margin-bottom: 1.5rem;
        }

        .form-label-custom {
            display: block;
            font-weight: 500;
            color: #4a5568;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: white;
        }

        .form-control-custom:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .help-text {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 0.375rem;
        }

        .notification-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
        }

        .notification-item:hover {
            border-color: #cbd5e0;
            background: #f1f5f9;
        }

        .notification-item.disabled {
            opacity: 0.6;
        }

        .notification-info {
            flex: 1;
        }

        .notification-title {
            font-weight: 600;
            color: #1a202c;
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .notification-description {
            font-size: 0.875rem;
            color: #718096;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #cbd5e0;
            transition: 0.4s;
            border-radius: 34px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

        .toggle-switch input:checked + .toggle-slider {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .toggle-switch input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

        .toggle-switch input:disabled + .toggle-slider {
            cursor: not-allowed;
            opacity: 0.6;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.875rem 2.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(102, 126, 234, 0.5);
        }

        .btn-secondary-custom {
            background: white;
            border: 2px solid #667eea;
            color: #667eea;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-secondary-custom:hover {
            background: #667eea;
            color: white;
        }

        .verified-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #d1fae5;
            color: #065f46;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .unverified-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: #fef3c7;
            color: #92400e;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 0.5rem;
        }

        .info-banner {
            background: #e0e7ff;
            border: 2px solid #6366f1;
            border-radius: 8px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .info-icon {
            color: #6366f1;
            font-size: 1.25rem;
            font-weight: bold;
        }

        .info-content {
            flex: 1;
        }

        .info-title {
            font-weight: 600;
            color: #3730a3;
            margin-bottom: 0.25rem;
        }

        .info-text {
            color: #4338ca;
            font-size: 0.875rem;
            margin: 0;
        }

        .cost-warning {
            background: #fef3c7;
            border: 2px solid #fbbf24;
            border-radius: 8px;
            padding: 1rem 1.25rem;
            margin-top: 1rem;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .warning-icon {
            color: #f59e0b;
            font-size: 1.25rem;
            font-weight: bold;
        }
    </style>
}

<div class="page-header">
    <h2 class="mb-1" style="font-size: 2rem; font-weight: 700;">SMS Alerts</h2>
    <p class="mb-0" style="opacity: 0.9;">Manage text message notifications for your account</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<form method="post">
    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Phone Number</h3>
            <p class="help-text mb-3">Set up your phone number to receive SMS alerts</p>

            <div class="form-group-custom">
                <label asp-for="PhoneNumber" class="form-label-custom">Mobile Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control-custom" placeholder="+1 (555) 123-4567" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                @if (Model.IsPhoneVerified)
                {
                    <div class="verified-badge">
                        <span>âœ“</span>
                        <span>Verified</span>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <div class="unverified-badge">
                        <span>!</span>
                        <span>Not Verified</span>
                    </div>
                    <button type="button" class="btn-secondary-custom mt-2">
                        Send Verification Code
                    </button>
                }

                <p class="help-text">Standard messaging rates may apply from your carrier</p>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Security Alerts</h3>
            <p class="help-text mb-3">Critical security notifications via SMS</p>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Login from new device</div>
                    <div class="notification-description">Get a text when someone logs into your account from an unrecognized device</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="LoginAlerts" checked @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Password reset</div>
                    <div class="notification-description">Receive SMS confirmation when your password is changed</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="PasswordReset" checked @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Two-factor codes</div>
                    <div class="notification-description">Receive 2FA verification codes via SMS</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="TwoFactorCodes" checked @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Account Activity</h3>
            <p class="help-text mb-3">Get notified about important account activities</p>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Payment alerts</div>
                    <div class="notification-description">Text alerts for successful payments and charges</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="PaymentAlerts" @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Failed payment attempts</div>
                    <div class="notification-description">Immediate SMS when a payment fails</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="FailedPayments" @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item @(!Model.IsPhoneVerified ? "disabled" : "")">
                <div class="notification-info">
                    <div class="notification-title">Account changes</div>
                    <div class="notification-description">SMS alerts for important account modifications</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="AccountChanges" @(!Model.IsPhoneVerified ? "disabled" : "")>
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="page-card">
        @if (!Model.IsPhoneVerified && !string.IsNullOrEmpty(Model.PhoneNumber))
        {
            <div class="info-banner">
                <div class="info-icon">â„¹</div>
                <div class="info-content">
                    <div class="info-title">Verify Your Phone Number</div>
                    <p class="info-text">Please verify your phone number to enable SMS alerts.</p>
                </div>
            </div>
        }

        <div class="cost-warning">
            <div class="warning-icon">ðŸ’°</div>
            <div class="info-content">
                <div class="info-title">SMS Charges May Apply</div>
                <p class="info-text">Your mobile carrier may charge for SMS messages. Message and data rates may apply. You can opt-out at any time by disabling SMS alerts.</p>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn-primary-custom">
                Save Preferences
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
