@page "/EmailNotifications"
@model EmailNotificationsModel
@{
    ViewData["Title"] = "Email Notifications";
    ViewData["ActivePage"] = "EmailNotifications";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
        }

        .page-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            margin-bottom: 1.5rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .form-section-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .help-text {
            font-size: 0.875rem;
            color: #718096;
            margin-top: 0.375rem;
        }

        .notification-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1.25rem;
            background: #f8fafc;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            margin-bottom: 0.75rem;
            transition: all 0.3s ease;
        }

        .notification-item:hover {
            border-color: #cbd5e0;
            background: #f1f5f9;
        }

        .notification-info {
            flex: 1;
        }

        .notification-title {
            font-weight: 600;
            color: #1a202c;
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .notification-description {
            font-size: 0.875rem;
            color: #718096;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #cbd5e0;
            transition: 0.4s;
            border-radius: 34px;
        }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

        .toggle-switch input:checked + .toggle-slider {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .toggle-switch input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 0.875rem 2.5rem;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(102, 126, 234, 0.5);
        }

        .info-banner {
            background: #e0e7ff;
            border: 2px solid #6366f1;
            border-radius: 8px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .info-icon {
            color: #6366f1;
            font-size: 1.25rem;
            font-weight: bold;
        }

        .info-content {
            flex: 1;
        }

        .info-title {
            font-weight: 600;
            color: #3730a3;
            margin-bottom: 0.25rem;
        }

        .info-text {
            color: #4338ca;
            font-size: 0.875rem;
            margin: 0;
        }
    </style>
}

<div class="page-header">
    <h2 class="mb-1" style="font-size: 2rem; font-weight: 700;">Email Notifications</h2>
    <p class="mb-0" style="opacity: 0.9;">Control what email notifications you receive</p>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<form method="post">
    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Account Activity</h3>
            <p class="help-text mb-3">Receive notifications about your account security and activity</p>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Login alerts</div>
                    <div class="notification-description">Get notified when someone logs into your account from a new device</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="LoginAlerts" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Password changes</div>
                    <div class="notification-description">Receive confirmation emails when your password is changed</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="PasswordChanges" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Two-factor authentication</div>
                    <div class="notification-description">Notifications about 2FA setup and verification codes</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="TwoFactorAuth" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Account recovery</div>
                    <div class="notification-description">Important security and account recovery information</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="AccountRecovery" checked disabled>
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Updates & Features</h3>
            <p class="help-text mb-3">Stay informed about new features and product updates</p>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Product updates</div>
                    <div class="notification-description">Learn about new features and improvements</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="ProductUpdates" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Tips and tutorials</div>
                    <div class="notification-description">Get helpful tips on how to use the platform</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="TipsAndTutorials">
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Newsletters</div>
                    <div class="notification-description">Weekly newsletter with news and updates</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="Newsletters">
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="form-section">
            <h3 class="form-section-title">Billing & Subscriptions</h3>
            <p class="help-text mb-3">Manage billing and payment notifications</p>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Payment receipts</div>
                    <div class="notification-description">Receive receipts for all payments and charges</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="PaymentReceipts" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Subscription reminders</div>
                    <div class="notification-description">Get reminders before your subscription renews</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="SubscriptionReminders" checked>
                    <span class="toggle-slider"></span>
                </label>
            </div>

            <div class="notification-item">
                <div class="notification-info">
                    <div class="notification-title">Failed payments</div>
                    <div class="notification-description">Alert me when a payment fails</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" name="FailedPayments" checked disabled>
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="page-card">
        <div class="info-banner">
            <div class="info-icon">â„¹</div>
            <div class="info-content">
                <div class="info-title">Important Security Notifications</div>
                <p class="info-text">Some security-related notifications cannot be disabled to ensure your account remains secure.</p>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn-primary-custom">
                Save Preferences
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
