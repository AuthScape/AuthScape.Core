@page
@model IDP.Areas.Admin.Pages.IdentityServer.PromoCodesModel
@using AuthScape.Models.PaymentGateway
@using global::System.Text.Json
@{
    ViewData["Title"] = "Promo Codes";
    Layout = "_AdminLayout";
}

<div class="promo-container">
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">Promo Codes</h1>
            <p class="page-subtitle">Manage promo codes and Stripe integration</p>
        </div>
        <div class="header-actions">
            <form method="post" asp-page-handler="SyncFromStripe" style="display: inline;">
                <button type="submit" class="btn-sync">
                    <i class="fa fa-refresh"></i> Sync from Stripe
                </button>
            </form>
            <button type="button" class="btn-add" onclick="showCreateModal()">
                <i class="fa fa-plus"></i> Add Promo Code
            </button>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle me-2"></i>@Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa fa-exclamation-circle me-2"></i>@Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="stat-card">
            <div class="stat-icon stat-icon-total">
                <i class="fa fa-ticket"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Total Codes</div>
                <div class="stat-value">@Model.TotalCount</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon stat-icon-active">
                <i class="fa fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Active Codes</div>
                <div class="stat-value">@Model.ActiveCount</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon stat-icon-expired">
                <i class="fa fa-clock-o"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Expired</div>
                <div class="stat-value">@Model.ExpiredCount</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon stat-icon-stripe">
                <i class="fa fa-link"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Stripe Synced</div>
                <div class="stat-value">@Model.SyncedCount</div>
            </div>
        </div>
    </div>

    <!-- Promo Codes Table -->
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Discount</th>
                    <th>Duration</th>
                    <th>Scope</th>
                    <th class="text-center">Usage</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Stripe</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.PromoCodes.Count == 0)
                {
                    <tr>
                        <td colspan="8" class="text-center empty-state">
                            <div class="empty-icon">
                                <i class="fa fa-ticket"></i>
                            </div>
                            <div class="empty-title">No promo codes yet</div>
                            <div class="empty-subtitle">Create your first promo code or sync from Stripe to get started</div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var promo in Model.PromoCodes)
                    {
                        <tr class="data-row">
                            <td>
                                <div class="code-info">
                                    <div class="code-value">@promo.Code</div>
                                    <div class="code-name">@promo.Name</div>
                                </div>
                            </td>
                            <td>
                                <div class="discount-display">
                                    <span class="discount-value">@promo.DiscountDisplay</span>
                                </div>
                            </td>
                            <td>
                                <span class="duration-badge">@promo.DurationDisplay</span>
                            </td>
                            <td>
                                <span class="scope-badge scope-@promo.Scope.ToString().ToLower()">@promo.ScopeDisplay</span>
                            </td>
                            <td class="text-center">
                                <span class="usage-display">@promo.UsageDisplay</span>
                            </td>
                            <td class="text-center">
                                <form method="post" asp-page-handler="ToggleActive" style="display: inline;">
                                    <input type="hidden" name="id" value="@promo.Id" />
                                    <button type="submit" class="status-toggle @promo.StatusDisplay.ToLower().Replace(" ", "-")" title="Click to toggle">
                                        @switch (promo.StatusDisplay)
                                        {
                                            case "Active":
                                                <i class="fa fa-check"></i>
                                                <span>Active</span>
                                                break;
                                            case "Inactive":
                                                <i class="fa fa-pause"></i>
                                                <span>Inactive</span>
                                                break;
                                            case "Expired":
                                                <i class="fa fa-clock-o"></i>
                                                <span>Expired</span>
                                                break;
                                            case "Scheduled":
                                                <i class="fa fa-calendar"></i>
                                                <span>Scheduled</span>
                                                break;
                                            case "Maxed Out":
                                                <i class="fa fa-ban"></i>
                                                <span>Maxed</span>
                                                break;
                                            default:
                                                <span>@promo.StatusDisplay</span>
                                                break;
                                        }
                                    </button>
                                </form>
                            </td>
                            <td class="text-center">
                                @if (promo.IsSyncedToStripe)
                                {
                                    <span class="stripe-linked" title="@promo.StripePromotionCodeId">
                                        <i class="fa fa-check-circle"></i> Linked
                                    </span>
                                }
                                else
                                {
                                    <span class="stripe-unlinked">
                                        <i class="fa fa-minus-circle"></i> Not Linked
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="action-buttons">
                                    <button type="button" class="btn-action btn-edit"
                                            onclick="showEditModal('@promo.Id')"
                                            title="Edit promo code">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <button type="button" class="btn-action btn-delete"
                                            onclick="confirmDelete('@promo.Id', '@promo.Code.Replace("'", "\\'")')"
                                            title="Delete promo code">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Promo Code Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content modern-modal">
            <div class="modal-header modal-header-create">
                <div class="modal-icon-wrapper modal-icon-create">
                    <i class="fa fa-plus"></i>
                </div>
                <div class="modal-header-text">
                    <h5 class="modal-title" id="createModalLabel">Create Promo Code</h5>
                    <p class="modal-subtitle">Add a new promo code for your platform</p>
                </div>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa fa-times"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div class="form-tabs">
                        <button type="button" class="form-tab active" onclick="showTab('create', 'basic')">Basic Info</button>
                        <button type="button" class="form-tab" onclick="showTab('create', 'discount')">Discount</button>
                        <button type="button" class="form-tab" onclick="showTab('create', 'restrictions')">Restrictions</button>
                        <button type="button" class="form-tab" onclick="showTab('create', 'limits')">Limits</button>
                    </div>

                    <!-- Basic Info Tab -->
                    <div id="create-basic" class="form-tab-content active">
                        <div class="form-group">
                            <label for="createName" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="createName" name="name" required
                                   placeholder="e.g., Summer 2026 Sale, Launch Discount">
                            <div class="form-hint">
                                <i class="fa fa-info-circle"></i> Internal name for admin reference
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="createDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="createDescription" name="description" rows="2"
                                      placeholder="Notes about this promo code..."></textarea>
                        </div>
                        <div class="form-group">
                            <label for="createCode" class="form-label">Promo Code</label>
                            <div class="input-group-custom">
                                <input type="text" class="form-control" id="createCode" name="code"
                                       placeholder="e.g., SUMMER20" style="text-transform: uppercase;">
                                <button type="button" class="btn-generate" onclick="generateCode()">
                                    <i class="fa fa-random"></i> Generate
                                </button>
                            </div>
                            <div class="form-hint">
                                <i class="fa fa-info-circle"></i> Leave empty or click Generate to create a random code
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-check-inline">
                                <input type="checkbox" class="form-check-input" id="createIsActive" name="isActive" value="true" checked>
                                <label for="createIsActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Discount Tab -->
                    <div id="create-discount" class="form-tab-content">
                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="createDiscountType" class="form-label">Discount Type</label>
                                <select class="form-control" id="createDiscountType" name="discountType" onchange="toggleCurrency('create')">
                                    <option value="@((int)PromoCodeType.Percentage)">Percentage Off</option>
                                    <option value="@((int)PromoCodeType.FixedAmount)">Fixed Amount Off</option>
                                </select>
                            </div>
                            <div class="form-group flex-1">
                                <label for="createDiscountValue" class="form-label">Discount Value *</label>
                                <div class="input-prefix-group">
                                    <span id="createDiscountPrefix" class="input-prefix">%</span>
                                    <input type="number" class="form-control" id="createDiscountValue" name="discountValue"
                                           step="0.01" min="0" value="0" required>
                                </div>
                            </div>
                            <div class="form-group" id="createCurrencyGroup" style="display: none; width: 100px;">
                                <label for="createCurrency" class="form-label">Currency</label>
                                <select class="form-control" id="createCurrency" name="currency">
                                    <option value="usd">USD</option>
                                    <option value="eur">EUR</option>
                                    <option value="gbp">GBP</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="createDuration" class="form-label">Duration</label>
                                <select class="form-control" id="createDuration" name="duration" onchange="toggleDurationMonths('create')">
                                    <option value="@((int)PromoDuration.Once)">First payment only</option>
                                    <option value="@((int)PromoDuration.Repeating)">For multiple months</option>
                                    <option value="@((int)PromoDuration.Forever)">Forever (all payments)</option>
                                </select>
                            </div>
                            <div class="form-group" id="createDurationMonthsGroup" style="display: none; width: 150px;">
                                <label for="createDurationInMonths" class="form-label">Months</label>
                                <input type="number" class="form-control" id="createDurationInMonths" name="durationInMonths"
                                       min="1" value="3">
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group">
                            <label class="form-label">Trial Extension</label>
                            <div class="form-row align-items-center">
                                <div class="form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="createExtendsTrialDays" name="extendsTrialDays" value="true"
                                           onchange="toggleTrialExtension('create')">
                                    <label for="createExtendsTrialDays" class="form-check-label">Extend trial period</label>
                                </div>
                                <div class="form-group" id="createTrialExtensionGroup" style="display: none; width: 150px;">
                                    <input type="number" class="form-control" id="createAdditionalTrialDays" name="additionalTrialDays"
                                           min="0" value="7" placeholder="Extra days">
                                </div>
                            </div>
                            <div class="form-hint">
                                <i class="fa fa-info-circle"></i> Add extra trial days when this code is used
                            </div>
                        </div>
                    </div>

                    <!-- Restrictions Tab -->
                    <div id="create-restrictions" class="form-tab-content">
                        <div class="form-group">
                            <label for="createScope" class="form-label">Who Can Use This Code</label>
                            <select class="form-control" id="createScope" name="scope" onchange="toggleScopeFields('create')">
                                <option value="@((int)PromoCodeScope.All)">Anyone (Global)</option>
                                <option value="@((int)PromoCodeScope.User)">Specific User</option>
                                <option value="@((int)PromoCodeScope.Company)">Specific Company</option>
                                <option value="@((int)PromoCodeScope.Location)">Specific Location</option>
                            </select>
                        </div>

                        <!-- User Search -->
                        <div id="createUserSearch" class="scope-search" style="display: none;">
                            <label class="form-label">Select User</label>
                            <div class="search-input-wrapper">
                                <input type="text" class="form-control" id="createUserSearchInput"
                                       placeholder="Search by name or email..." oninput="searchUsers('create')">
                                <input type="hidden" id="createRestrictedToUserId" name="restrictedToUserId">
                            </div>
                            <div id="createUserResults" class="search-results"></div>
                            <div id="createSelectedUser" class="selected-item" style="display: none;"></div>
                        </div>

                        <!-- Company Search -->
                        <div id="createCompanySearch" class="scope-search" style="display: none;">
                            <label class="form-label">Select Company</label>
                            <div class="search-input-wrapper">
                                <input type="text" class="form-control" id="createCompanySearchInput"
                                       placeholder="Search by company name..." oninput="searchCompanies('create')">
                                <input type="hidden" id="createRestrictedToCompanyId" name="restrictedToCompanyId">
                            </div>
                            <div id="createCompanyResults" class="search-results"></div>
                            <div id="createSelectedCompany" class="selected-item" style="display: none;"></div>
                        </div>

                        <!-- Location Search -->
                        <div id="createLocationSearch" class="scope-search" style="display: none;">
                            <label class="form-label">Select Location</label>
                            <div class="search-input-wrapper">
                                <input type="text" class="form-control" id="createLocationSearchInput"
                                       placeholder="Search by location name..." oninput="searchLocations('create')">
                                <input type="hidden" id="createRestrictedToLocationId" name="restrictedToLocationId">
                            </div>
                            <div id="createLocationResults" class="search-results"></div>
                            <div id="createSelectedLocation" class="selected-item" style="display: none;"></div>
                        </div>

                        <div class="form-divider"></div>

                        <div class="form-group">
                            <label for="createAppliesTo" class="form-label">Applies To</label>
                            <select class="form-control" id="createAppliesTo" name="appliesTo" onchange="toggleApplicablePlans('create')">
                                <option value="@((int)PromoCodeAppliesTo.All)">All Payment Types</option>
                                <option value="@((int)PromoCodeAppliesTo.Subscriptions)">Subscriptions Only</option>
                                <option value="@((int)PromoCodeAppliesTo.Products)">Products Only</option>
                                <option value="@((int)PromoCodeAppliesTo.Services)">Services Only</option>
                            </select>
                        </div>

                        <div id="createApplicablePlansGroup" class="form-group" style="display: none;">
                            <label class="form-label">Specific Plans (Optional)</label>
                            <div class="form-hint mb-2">
                                <i class="fa fa-info-circle"></i> Leave unchecked to apply to all plans
                            </div>
                            <div class="plans-checkbox-grid">
                                @foreach (var plan in Model.AvailablePlans)
                                {
                                    <div class="plan-checkbox-item">
                                        <input type="checkbox" class="form-check-input"
                                               id="createPlan_@plan.Id" name="applicablePlanIds" value="@plan.Id">
                                        <label for="createPlan_@plan.Id" class="form-check-label">@plan.Name</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Limits Tab -->
                    <div id="create-limits" class="form-tab-content">
                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="createMaxRedemptions" class="form-label">Max Total Redemptions</label>
                                <input type="number" class="form-control" id="createMaxRedemptions" name="maxRedemptions"
                                       min="0" placeholder="Leave empty for unlimited">
                            </div>
                            <div class="form-group flex-1">
                                <label for="createMaxPerCustomer" class="form-label">Max Per Customer</label>
                                <input type="number" class="form-control" id="createMaxPerCustomer" name="maxRedemptionsPerCustomer"
                                       min="0" placeholder="Leave empty for unlimited">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="createStartsAt" class="form-label">Starts At</label>
                                <input type="datetime-local" class="form-control" id="createStartsAt" name="startsAt">
                                <div class="form-hint">Leave empty for immediate activation</div>
                            </div>
                            <div class="form-group flex-1">
                                <label for="createExpiresAt" class="form-label">Expires At</label>
                                <input type="datetime-local" class="form-control" id="createExpiresAt" name="expiresAt">
                                <div class="form-hint">Leave empty for no expiration</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="createMinimumAmount" class="form-label">Minimum Order Amount</label>
                            <div class="input-prefix-group">
                                <span class="input-prefix">$</span>
                                <input type="number" class="form-control" id="createMinimumAmount" name="minimumAmount"
                                       step="0.01" min="0" placeholder="No minimum">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-modern btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn-modern btn-primary">
                        <i class="fa fa-plus"></i> Create Promo Code
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Promo Code Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
