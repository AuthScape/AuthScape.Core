                            <div class="form-group" id="editCurrencyGroup" style="display: none; width: 100px;">
                                <label for="editCurrency" class="form-label">Currency</label>
                                <select class="form-control" id="editCurrency" name="currency">
                                    <option value="usd">USD</option>
                                    <option value="eur">EUR</option>
                                    <option value="gbp">GBP</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="editDuration" class="form-label">Duration</label>
                                <select class="form-control" id="editDuration" name="duration" onchange="toggleDurationMonths('edit')">
                                    <option value="@((int)PromoDuration.Once)">First payment only</option>
                                    <option value="@((int)PromoDuration.Repeating)">For multiple months</option>
                                    <option value="@((int)PromoDuration.Forever)">Forever (all payments)</option>
                                </select>
                            </div>
                            <div class="form-group" id="editDurationMonthsGroup" style="display: none; width: 150px;">
                                <label for="editDurationInMonths" class="form-label">Months</label>
                                <input type="number" class="form-control" id="editDurationInMonths" name="durationInMonths" min="1">
                            </div>
                        </div>
                        <div class="form-divider"></div>
                        <div class="form-group">
                            <label class="form-label">Trial Extension</label>
                            <div class="form-row align-items-center">
                                <div class="form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="editExtendsTrialDays" name="extendsTrialDays" value="true"
                                           onchange="toggleTrialExtension('edit')">
                                    <label for="editExtendsTrialDays" class="form-check-label">Extend trial period</label>
                                </div>
                                <div class="form-group" id="editTrialExtensionGroup" style="display: none; width: 150px;">
                                    <input type="number" class="form-control" id="editAdditionalTrialDays" name="additionalTrialDays" min="0">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Restrictions Tab -->
                    <div id="edit-restrictions" class="form-tab-content">
