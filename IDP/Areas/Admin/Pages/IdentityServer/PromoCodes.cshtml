                        <div class="form-row">
                            <div class="form-group flex-1">
                                <label for="editDiscountType" class="form-label">Discount Type</label>
                                <select class="form-control" id="editDiscountType" name="discountType" onchange="toggleCurrency('edit')">
                                    <option value="@((int)PromoCodeType.Percentage)">Percentage Off</option>
                                    <option value="@((int)PromoCodeType.FixedAmount)">Fixed Amount Off</option>
