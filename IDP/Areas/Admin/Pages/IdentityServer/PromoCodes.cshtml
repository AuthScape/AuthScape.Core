@section Scripts {
    <script>
        // Promo code data for edit modal
        var promoCodesData = @Html.Raw(JsonSerializer.Serialize(Model.PromoCodes.Select(p => new {
            p.Id,
            p.Name,
            p.Description,
            p.Code,
            DiscountType = (int)p.DiscountType,
            p.DiscountValue,
            p.Currency,
            Duration = (int)p.Duration,
            p.DurationInMonths,
            p.MaxRedemptions,
            p.MaxRedemptionsPerCustomer,
            StartsAt = p.StartsAt?.ToString("yyyy-MM-ddTHH:mm"),
            ExpiresAt = p.ExpiresAt?.ToString("yyyy-MM-ddTHH:mm"),
            Scope = (int)p.Scope,
            p.RestrictedToUserId,
            p.RestrictedToUserName,
            p.RestrictedToCompanyId,
            p.RestrictedToCompanyName,
            p.RestrictedToLocationId,
            p.RestrictedToLocationName,
            AppliesTo = (int)p.AppliesTo,
            p.ApplicablePlanIdList,
            p.ExtendsTrialDays,
            p.AdditionalTrialDays,
            p.MinimumAmount,
            p.IsActive
        })));

        var searchTimeout;

        function showTab(prefix, tabName) {
            document.querySelectorAll('#' + prefix + 'Modal .form-tab-content').forEach(function(tab) {
                tab.classList.remove('active');
            });
            document.querySelectorAll('#' + prefix + 'Modal .form-tab').forEach(function(btn) {
                btn.classList.remove('active');
            });
            document.getElementById(prefix + '-' + tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function toggleCurrency(prefix) {
            var select = document.getElementById(prefix + 'DiscountType');
            var currencyGroup = document.getElementById(prefix + 'CurrencyGroup');
            var discountPrefix = document.getElementById(prefix + 'DiscountPrefix');
            var isFixed = select.value === '@((int)PromoCodeType.FixedAmount)';
            currencyGroup.style.display = isFixed ? 'block' : 'none';
            discountPrefix.textContent = isFixed ? '$' : '%';
        }

        function toggleDurationMonths(prefix) {
            var select = document.getElementById(prefix + 'Duration');
            var monthsGroup = document.getElementById(prefix + 'DurationMonthsGroup');
            monthsGroup.style.display = select.value === '@((int)PromoDuration.Repeating)' ? 'block' : 'none';
        }

        function toggleTrialExtension(prefix) {
            var checkbox = document.getElementById(prefix + 'ExtendsTrialDays');
            var group = document.getElementById(prefix + 'TrialExtensionGroup');
            group.style.display = checkbox.checked ? 'block' : 'none';
        }

        function toggleScopeFields(prefix) {
            var scope = document.getElementById(prefix + 'Scope').value;
            document.querySelectorAll('#' + prefix + 'Modal .scope-search').forEach(function(el) {
                el.style.display = 'none';
            });

            // Clear previous selections
            ['User', 'Company', 'Location'].forEach(function(type) {
                document.getElementById(prefix + 'RestrictedTo' + type + 'Id').value = '';
                document.getElementById(prefix + 'Selected' + type).style.display = 'none';
            });

            if (scope === '@((int)PromoCodeScope.User)') {
                document.getElementById(prefix + 'UserSearch').style.display = 'block';
            } else if (scope === '@((int)PromoCodeScope.Company)') {
                document.getElementById(prefix + 'CompanySearch').style.display = 'block';
            } else if (scope === '@((int)PromoCodeScope.Location)') {
                document.getElementById(prefix + 'LocationSearch').style.display = 'block';
            }
        }

        function toggleApplicablePlans(prefix) {
            var appliesTo = document.getElementById(prefix + 'AppliesTo').value;
            var plansGroup = document.getElementById(prefix + 'ApplicablePlansGroup');
            plansGroup.style.display = appliesTo === '@((int)PromoCodeAppliesTo.Subscriptions)' ? 'block' : 'none';
        }

        async function generateCode() {
            try {
                var response = await fetch('?handler=GenerateCode');
                if (!response.ok) {
                    throw new Error('Server returned ' + response.status);
                }
                var data = await response.json();
                document.getElementById('createCode').value = data.code;
            } catch (error) {
                console.error('Error generating code:', error);
                alert('Failed to generate code. Please try again.');
            }
        }

        // Search functions
        async function searchUsers(prefix) {
            var term = document.getElementById(prefix + 'UserSearchInput').value;
            if (term.length < 2) {
                document.getElementById(prefix + 'UserResults').classList.remove('show');
                return;
            }

            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(async function() {
                try {
                    var response = await fetch('?handler=SearchUsers&term=' + encodeURIComponent(term));
                    var users = await response.json();
                    renderSearchResults(prefix, 'User', users, function(u) {
                        return { id: u.id, name: u.displayName, detail: u.email };
                    });
                } catch (error) {
                    console.error('Error searching users:', error);
                }
            }, 300);
        }

        async function searchCompanies(prefix) {
            var term = document.getElementById(prefix + 'CompanySearchInput').value;
            if (term.length < 2) {
                document.getElementById(prefix + 'CompanyResults').classList.remove('show');
                return;
            }

            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(async function() {
                try {
                    var response = await fetch('?handler=SearchCompanies&term=' + encodeURIComponent(term));
                    var companies = await response.json();
                    renderSearchResults(prefix, 'Company', companies, function(c) {
                        return { id: c.id, name: c.name, detail: '' };
                    });
                } catch (error) {
                    console.error('Error searching companies:', error);
                }
            }, 300);
        }

        async function searchLocations(prefix) {
            var term = document.getElementById(prefix + 'LocationSearchInput').value;
            if (term.length < 2) {
                document.getElementById(prefix + 'LocationResults').classList.remove('show');
                return;
            }

            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(async function() {
                try {
                    var response = await fetch('?handler=SearchLocations&term=' + encodeURIComponent(term));
                    var locations = await response.json();
                    renderSearchResults(prefix, 'Location', locations, function(l) {
                        return { id: l.id, name: l.name, detail: l.companyName || '' };
                    });
                } catch (error) {
                    console.error('Error searching locations:', error);
                }
            }, 300);
        }

        function renderSearchResults(prefix, type, items, mapper) {
            var resultsContainer = document.getElementById(prefix + type + 'Results');
            resultsContainer.innerHTML = '';

            if (items.length === 0) {
                resultsContainer.innerHTML = '<div class="search-result-item"><span class="search-result-detail">No results found</span></div>';
                resultsContainer.classList.add('show');
                return;
            }

            items.forEach(function(item) {
                var mapped = mapper(item);
                var div = document.createElement('div');
                div.className = 'search-result-item';
                div.innerHTML = '<div class="search-result-name">' + mapped.name + '</div>' +
                    (mapped.detail ? '<div class="search-result-detail">' + mapped.detail + '</div>' : '');
                div.onclick = function() { selectItem(prefix, type, mapped.id, mapped.name); };
                resultsContainer.appendChild(div);
            });

            resultsContainer.classList.add('show');
        }

        function selectItem(prefix, type, id, name) {
            document.getElementById(prefix + 'RestrictedTo' + type + 'Id').value = id;
            document.getElementById(prefix + type + 'SearchInput').value = '';
            document.getElementById(prefix + type + 'Results').classList.remove('show');

            var selectedDiv = document.getElementById(prefix + 'Selected' + type);
            selectedDiv.innerHTML = '<span class="selected-item-name">' + name + '</span>' +
                '<button type="button" class="btn-clear-selection" onclick="clearSelection(\'' + prefix + '\', \'' + type + '\')"><i class="fa fa-times"></i></button>';
            selectedDiv.style.display = 'flex';
        }

        function clearSelection(prefix, type) {
            document.getElementById(prefix + 'RestrictedTo' + type + 'Id').value = '';
            document.getElementById(prefix + 'Selected' + type).style.display = 'none';
        }

        function showCreateModal() {
            try {
                document.querySelector('#createModal form').reset();
                document.getElementById('createIsActive').checked = true;

                // Reset tabs
                document.querySelectorAll('#createModal .form-tab-content').forEach(function(tab) {
                    tab.classList.remove('active');
                });
                document.querySelectorAll('#createModal .form-tab').forEach(function(btn) {
                    btn.classList.remove('active');
                });
                document.getElementById('create-basic').classList.add('active');
                document.querySelector('#createModal .form-tab').classList.add('active');

                // Reset conditional fields
                document.getElementById('createCurrencyGroup').style.display = 'none';
                document.getElementById('createDurationMonthsGroup').style.display = 'none';
                document.getElementById('createTrialExtensionGroup').style.display = 'none';
                document.getElementById('createApplicablePlansGroup').style.display = 'none';

                document.querySelectorAll('#createModal .scope-search').forEach(function(el) {
                    el.style.display = 'none';
                });
                document.querySelectorAll('#createModal .selected-item').forEach(function(el) {
                    el.style.display = 'none';
                });

                var createModal = new bootstrap.Modal(document.getElementById('createModal'));
                createModal.show();
            } catch (error) {
                console.error('Error showing create modal:', error);
                alert('Error opening modal: ' + error.message);
            }
        }

        function showEditModal(promoId) {
            try {
                var promo = promoCodesData.find(function(p) { return p.Id === promoId; });
                if (!promo) {
                    alert('Promo code not found');
                    return;
                }

                document.getElementById('editId').value = promo.Id;
                document.getElementById('editName').value = promo.Name || '';
                document.getElementById('editDescription').value = promo.Description || '';
                document.getElementById('editCode').value = promo.Code || '';
                document.getElementById('editDiscountType').value = promo.DiscountType;
                document.getElementById('editDiscountValue').value = promo.DiscountValue || 0;
                document.getElementById('editCurrency').value = (promo.Currency || 'usd').toLowerCase();
                document.getElementById('editDuration').value = promo.Duration;
                document.getElementById('editDurationInMonths').value = promo.DurationInMonths || 3;
                document.getElementById('editMaxRedemptions').value = promo.MaxRedemptions || '';
                document.getElementById('editMaxPerCustomer').value = promo.MaxRedemptionsPerCustomer || '';
                document.getElementById('editStartsAt').value = promo.StartsAt || '';
                document.getElementById('editExpiresAt').value = promo.ExpiresAt || '';
                document.getElementById('editScope').value = promo.Scope;
                document.getElementById('editAppliesTo').value = promo.AppliesTo;
                document.getElementById('editExtendsTrialDays').checked = promo.ExtendsTrialDays;
                document.getElementById('editAdditionalTrialDays').value = promo.AdditionalTrialDays || 0;
                document.getElementById('editMinimumAmount').value = promo.MinimumAmount || '';
                document.getElementById('editIsActive').checked = promo.IsActive;

                // Trigger toggles
                toggleCurrency('edit');
                toggleDurationMonths('edit');
                toggleTrialExtension('edit');
                toggleScopeFields('edit');
                toggleApplicablePlans('edit');

                // Set scope selections
                if (promo.Scope === @((int)PromoCodeScope.User) && promo.RestrictedToUserId) {
                    document.getElementById('editRestrictedToUserId').value = promo.RestrictedToUserId;
                    var selectedDiv = document.getElementById('editSelectedUser');
                    selectedDiv.innerHTML = '<span class="selected-item-name">' + (promo.RestrictedToUserName || 'User #' + promo.RestrictedToUserId) + '</span>' +
                        '<button type="button" class="btn-clear-selection" onclick="clearSelection(\'edit\', \'User\')"><i class="fa fa-times"></i></button>';
                    selectedDiv.style.display = 'flex';
                }
                if (promo.Scope === @((int)PromoCodeScope.Company) && promo.RestrictedToCompanyId) {
                    document.getElementById('editRestrictedToCompanyId').value = promo.RestrictedToCompanyId;
                    var selectedDiv = document.getElementById('editSelectedCompany');
                    selectedDiv.innerHTML = '<span class="selected-item-name">' + (promo.RestrictedToCompanyName || 'Company #' + promo.RestrictedToCompanyId) + '</span>' +
                        '<button type="button" class="btn-clear-selection" onclick="clearSelection(\'edit\', \'Company\')"><i class="fa fa-times"></i></button>';
                    selectedDiv.style.display = 'flex';
                }
                if (promo.Scope === @((int)PromoCodeScope.Location) && promo.RestrictedToLocationId) {
                    document.getElementById('editRestrictedToLocationId').value = promo.RestrictedToLocationId;
                    var selectedDiv = document.getElementById('editSelectedLocation');
                    selectedDiv.innerHTML = '<span class="selected-item-name">' + (promo.RestrictedToLocationName || 'Location #' + promo.RestrictedToLocationId) + '</span>' +
                        '<button type="button" class="btn-clear-selection" onclick="clearSelection(\'edit\', \'Location\')"><i class="fa fa-times"></i></button>';
                    selectedDiv.style.display = 'flex';
                }

                // Set applicable plans
                document.querySelectorAll('#editModal input[name="applicablePlanIds"]').forEach(function(cb) {
                    cb.checked = promo.ApplicablePlanIdList && promo.ApplicablePlanIdList.includes(cb.value);
                });

                // Reset tabs
                document.querySelectorAll('#editModal .form-tab-content').forEach(function(tab) {
                    tab.classList.remove('active');
                });
                document.querySelectorAll('#editModal .form-tab').forEach(function(btn) {
                    btn.classList.remove('active');
                });
                document.getElementById('edit-basic').classList.add('active');
                document.querySelector('#editModal .form-tab').classList.add('active');

                var editModal = new bootstrap.Modal(document.getElementById('editModal'));
                editModal.show();
            } catch (error) {
                console.error('Error showing edit modal:', error);
                alert('Error opening modal: ' + error.message);
            }
        }

        function confirmDelete(id, code) {
            try {
                document.getElementById('codeToDelete').textContent = code;
                document.getElementById('idToDelete').value = id;

                var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
                deleteModal.show();
            } catch (error) {
                console.error('Error showing delete modal:', error);
                alert('Error opening modal: ' + error.message);
            }
        }

        // Close search results when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.search-input-wrapper')) {
                document.querySelectorAll('.search-results').forEach(function(el) {
                    el.classList.remove('show');
                });
            }
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            });
        }, 5000);
    </script>
}
