@page
@model IDP.Areas.Admin.Pages.IdentityServer.ScopesModel
@{
    ViewData["Title"] = "API Scopes";
}

@section Styles {
    <style>
        .scopes-grid {
            display: grid;
            gap: 1rem;
        }

        .scope-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            padding: 1.5rem;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

        .scope-card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            border-color: var(--primary-color);
        }

        .scope-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .scope-info h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.25rem;
        }

        .scope-name {
            font-size: 0.875rem;
            color: var(--gray-500);
            font-family: 'Courier New', monospace;
        }

        .scope-description {
            color: var(--gray-600);
            font-size: 0.9375rem;
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .scope-resources {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            padding-top: 1rem;
            border-top: 1px solid var(--gray-200);
        }

        .resource-badge {
            background: #dbeafe;
            color: #1e40af;
            padding: 0.375rem 0.75rem;
            border-radius: 6px;
            font-size: 0.875rem;
            font-weight: 500;
            font-family: 'Courier New', monospace;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal.show {
            display: block;
        }

        .modal-content {
            background-color: white;
            margin: 5% auto;
            padding: 0;
            border-radius: 12px;
            width: 90%;
            max-width: 700px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: modalSlideIn 0.3s ease;
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal-header {
            padding: 2rem;
            border-bottom: 1px solid var(--gray-200);
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        }

        .modal-header h2 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--gray-900);
        }

        .modal-body {
            padding: 2rem;
            max-height: 70vh;
            overflow-y: auto;
        }

        .modal-footer {
            padding: 1.5rem 2rem;
            border-top: 1px solid var(--gray-200);
            background: var(--gray-50);
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            border-radius: 0 0 12px 12px;
        }

        .uri-list {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .uri-item {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        .uri-item .form-control {
            flex: 1;
        }

        .btn-remove {
            background: #dc3545;
            color: white;
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s ease;
            flex-shrink: 0;
        }

        .btn-remove:hover {
            background: #c82333;
        }

        .btn-add {
            background: var(--gray-100);
            color: var(--gray-700);
            border: 2px dashed var(--gray-300);
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.15s ease;
        }

        .btn-add:hover {
            background: var(--gray-200);
            border-color: var(--gray-400);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
            font-size: 0.9375rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-control[readonly] {
            background: var(--gray-100);
            color: var(--gray-600);
            cursor: not-allowed;
        }

        .form-text {
            font-size: 0.875rem;
            color: var(--gray-500);
            margin-top: 0.25rem;
            display: block;
        }

        .btn-cancel {
            background: white;
            color: var(--gray-700);
            border: 2px solid var(--gray-300);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9375rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .btn-cancel:hover {
            background: var(--gray-100);
            border-color: var(--gray-400);
        }

        .btn-primary-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9375rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .btn-primary-gradient:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            border: 1px solid var(--gray-300);
            background: white;
            color: var(--gray-600);
            cursor: pointer;
            transition: all 0.15s ease;
        }

        .btn-icon:hover {
            background: var(--gray-100);
            border-color: var(--gray-400);
            color: var(--gray-900);
        }

        .application-actions {
            display: flex;
            gap: 0.5rem;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--gray-300);
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: var(--gray-900);
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-600);
            margin-bottom: 2rem;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
    </style>
}

<div class="admin-header">
    <h1>API Scopes</h1>
    <p>Manage OAuth 2.0 API scopes for fine-grained access control</p>
</div>

<div class="header-actions">
    <div></div>
    <button onclick="openCreateModal()" class="btn-primary-gradient">
        <i class="fa fa-plus"></i>
        Create Scope
    </button>
</div>

@if (Model.Scopes == null || !Model.Scopes.Any())
{
    <div class="empty-state">
        <i class="fa fa-tag"></i>
        <h3>No scopes yet</h3>
        <p>Create your first API scope to define access permissions</p>
        <button onclick="openCreateModal()" class="btn-primary-gradient">
            <i class="fa fa-plus"></i>
            Create Scope
        </button>
    </div>
}
else
{
    <div class="scopes-grid">
        @foreach (var scope in Model.Scopes)
        {
            <div class="scope-card">
                <div class="scope-header">
                    <div class="scope-info">
                        <h3>@scope.DisplayName</h3>
                        <div class="scope-name">@scope.Name</div>
                    </div>
                    <div class="application-actions">
                        <button class="btn-icon" onclick='openEditModal(@Html.Raw(Json.Serialize(new { id = scope.Id, name = scope.Name, displayName = scope.DisplayName, description = scope.Description, resources = scope.Resources })))' title="Edit">
                            <i class="fa fa-pencil"></i>
                        </button>
                        <button class="btn-icon" onclick="deleteScope('@scope.Id', '@scope.Name')" title="Delete">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(scope.Description))
                {
                    <div class="scope-description">
                        @scope.Description
                    </div>
                }

                @if (scope.Resources != null && scope.Resources.Any())
                {
                    <div class="scope-resources">
                        @foreach (var resource in scope.Resources)
                        {
                            <span class="resource-badge">@resource</span>
                        }
                    </div>
                }
            </div>
        }
    </div>
}

<!-- Create/Edit Modal -->
<div id="scopeModal" class="modal">
    <div class="modal-content">
        <form method="post" id="scopeForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="scopeId" id="scopeId" />

            <div class="modal-header">
                <h2 id="modalTitle">Create Scope</h2>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="scopeName">Scope Name *</label>
                    <input type="text" id="scopeName" name="scopeName" class="form-control" required
                           placeholder="api1.read" />
                    <small class="form-text">Unique identifier for this scope (lowercase, no spaces)</small>
                </div>

                <div class="form-group">
                    <label for="scopeDisplayName">Display Name *</label>
                    <input type="text" id="scopeDisplayName" name="scopeDisplayName" class="form-control" required
                           placeholder="Read Access" />
                    <small class="form-text">User-friendly name for this scope</small>
                </div>

                <div class="form-group">
                    <label for="scopeDescription">Description</label>
                    <textarea id="scopeDescription" name="scopeDescription" class="form-control"
                              placeholder="Allows read access to the API"></textarea>
                    <small class="form-text">Optional description of what this scope grants access to</small>
                </div>

                <div class="form-group">
                    <label>Resources</label>
                    <small class="form-text" style="display: block; margin-bottom: 0.5rem;">
                        Resource servers (client IDs) that can validate this scope
                    </small>
                    @if (Model.ResourceServers != null && Model.ResourceServers.Any())
                    {
                        <div id="resourcesList" class="uri-list">
                            <div class="uri-item">
                                <select name="resources" class="form-control">
                                    <option value="">-- Select Resource Server --</option>
                                    @foreach (var rs in Model.ResourceServers)
                                    {
                                        <option value="@rs.ClientId">@rs.DisplayName (@rs.ClientId)</option>
                                    }
                                </select>
                                <button type="button" class="btn-remove" onclick="removeResource(this)">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <button type="button" class="btn-add" onclick="addResource()">
                            <i class="fa fa-plus"></i>
                            Add Resource
                        </button>
                    }
                    else
                    {
                        <div style="padding: 1rem; background: var(--gray-100); border-radius: 8px; color: var(--gray-600); text-align: center;">
                            <i class="fa fa-info-circle"></i>
                            No Resource Server applications found. Create a Resource Server application first.
                        </div>
                    }
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn-cancel" onclick="closeModal()">Cancel</button>
                <button type="submit" class="btn-primary-gradient" id="submitBtn">
                    <i class="fa fa-check"></i>
                    Create Scope
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Store resource servers for JavaScript
        const resourceServers = @Html.Raw(Model.ResourceServers != null ? Json.Serialize(Model.ResourceServers.Select(rs => new { rs.ClientId, rs.DisplayName })) : "[]");

        function openCreateModal() {
            document.getElementById('modalTitle').textContent = 'Create Scope';
            document.getElementById('submitBtn').innerHTML = '<i class="fa fa-check"></i> Create Scope';
            document.getElementById('scopeForm').action = '?handler=Create';
            document.getElementById('scopeId').value = '';
            document.getElementById('scopeName').value = '';
            document.getElementById('scopeName').readOnly = false;
            document.getElementById('scopeDisplayName').value = '';
            document.getElementById('scopeDescription').value = '';

            // Reset resources list
            const resourcesList = document.getElementById('resourcesList');
            if (resourceServers.length > 0) {
                resourcesList.innerHTML = generateResourceSelectHTML();
            }

            document.getElementById('scopeModal').classList.add('show');
        }

        function generateResourceSelectHTML(selectedValue = '') {
            let optionsHTML = '';

            // Only add placeholder option if no value is selected
            if (!selectedValue) {
                optionsHTML = '<option value="">-- Select Resource Server --</option>';
            }

            resourceServers.forEach(rs => {
                const selected = rs.clientId === selectedValue ? 'selected' : '';
                optionsHTML += `<option value="${rs.clientId}" ${selected}>${rs.clientId}</option>`;
            });

            return `
                <div class="uri-item">
                    <select name="resources" class="form-control">
                        ${optionsHTML}
                    </select>
                    <button type="button" class="btn-remove" onclick="removeResource(this)">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            `;
        }

        function openEditModal(scope) {
            document.getElementById('modalTitle').textContent = 'Edit Scope';
            document.getElementById('submitBtn').innerHTML = '<i class="fa fa-check"></i> Save Changes';
            document.getElementById('scopeForm').action = '?handler=Edit';
            document.getElementById('scopeId').value = scope.id;
            document.getElementById('scopeName').value = scope.name;
            document.getElementById('scopeName').readOnly = true;
            document.getElementById('scopeDisplayName').value = scope.displayName;
            document.getElementById('scopeDescription').value = scope.description || '';

            // Populate resources list
            const resourcesList = document.getElementById('resourcesList');
            resourcesList.innerHTML = '';

            if (resourceServers.length > 0) {
                if (scope.resources && scope.resources.length > 0) {
                    scope.resources.forEach(resource => {
                        resourcesList.innerHTML += generateResourceSelectHTML(resource);
                    });
                } else {
                    resourcesList.innerHTML = generateResourceSelectHTML();
                }
            }

            document.getElementById('scopeModal').classList.add('show');
        }

        function closeModal() {
            document.getElementById('scopeModal').classList.remove('show');
        }

        function addResource() {
            const list = document.getElementById('resourcesList');
            if (resourceServers.length > 0) {
                list.innerHTML += generateResourceSelectHTML();
            }
        }

        function removeResource(button) {
            const item = button.closest('.uri-item');
            const list = item.parentElement;
            if (list.children.length > 1) {
                item.remove();
            }
        }

        function deleteScope(id, name) {
            if (confirm(`Are you sure you want to delete the scope "${name}"?\n\nThis action cannot be undone.`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '?handler=Delete';

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'scopeId';
                idInput.value = id;
                form.appendChild(idInput);

                document.body.appendChild(form);
                form.submit();
            }
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('scopeModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>
}
