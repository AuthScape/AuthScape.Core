@page
@model IDP.Areas.Admin.Pages.IdentityServer.ApplicationsModel
@{
    ViewData["Title"] = "Manage Applications";
}

@section Styles {
    <style>
        .applications-grid {
            display: grid;
            gap: 1rem;
        }

        .application-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            padding: 1.5rem;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

        .application-card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            border-color: var(--primary-color);
        }

        .application-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .application-info h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0 0 0.25rem;
        }

        .application-client-id {
            font-size: 0.875rem;
            color: var(--gray-500);
            font-family: 'Courier New', monospace;
        }

        .application-type-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .type-spa {
            background: #dbeafe;
            color: #1e40af;
        }

        .type-web {
            background: #dcfce7;
            color: #166534;
        }

        .type-native {
            background: #fef3c7;
            color: #92400e;
        }

        .type-machine {
            background: #f3e8ff;
            color: #6b21a8;
        }

        .type-device {
            background: #fee2e2;
            color: #991b1b;
        }

        .type-spalegacy {
            background: #e5e7eb;
            color: #374151;
        }

        .type-resourceserver {
            background: #dbeafe;
            color: #1e40af;
        }

        .application-description {
            color: var(--gray-600);
            font-size: 0.9375rem;
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .application-meta {
            display: flex;
            gap: 2rem;
            padding-top: 1rem;
            border-top: 1px solid var(--gray-200);
            font-size: 0.875rem;
            color: var(--gray-600);
        }

        .application-meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .application-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            border: 1px solid var(--gray-300);
            background: white;
            color: var(--gray-600);
            cursor: pointer;
            transition: all 0.15s ease;
        }

        .btn-icon:hover {
            background: var(--gray-100);
            border-color: var(--gray-400);
            color: var(--gray-900);
        }

        .btn-primary-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9375rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-primary-gradient:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .empty-state i {
            font-size: 4rem;
            color: var(--gray-300);
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: var(--gray-900);
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: var(--gray-600);
            margin-bottom: 2rem;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        /* Delete confirmation modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal.show {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .delete-modal-content {
            background-color: white;
            border-radius: 12px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: modalSlideIn 0.3s ease;
        }

        .delete-modal-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
            background: linear-gradient(135deg, rgba(220, 38, 38, 0.05), rgba(153, 27, 27, 0.05));
        }

        .delete-modal-header h3 {
            margin: 0;
            color: #dc2626;
            font-size: 1.25rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .delete-modal-body {
            padding: 1.5rem;
        }

        .delete-modal-body p {
            margin: 0 0 1.5rem;
            color: var(--gray-700);
        }

        .password-input-group {
            margin-bottom: 1rem;
        }

        .password-input-group label {
            display: block;
            font-weight: 600;
            color: var(--gray-700);
            margin-bottom: 0.5rem;
        }

        .password-input-group input {
            width: 100%;
            max-width: 100%;
            padding: 0.75rem;
            border: 2px solid var(--gray-300);
            border-radius: 8px;
            font-size: 0.9375rem;
            box-sizing: border-box;
        }

        .password-input-group input:focus {
            outline: none;
            border-color: #dc2626;
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
        }

        .error-message {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .delete-modal-footer {
            padding: 1rem 1.5rem;
            border-top: 1px solid var(--gray-200);
            background: var(--gray-50);
            display: flex;
            gap: 0.75rem;
            justify-content: flex-end;
            border-radius: 0 0 12px 12px;
        }

        .delete-modal-footer .btn-cancel {
            background: white;
            color: var(--gray-700);
            border: 2px solid var(--gray-300);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
        }

        .delete-modal-footer .btn-cancel:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
            color: var(--gray-900);
        }

        .btn-delete {
            background: #dc2626;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9375rem;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-delete:hover {
            background: #b91c1c;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(220, 38, 38, 0.3);
        }

        .btn-delete:disabled {
            background: var(--gray-400);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }
    </style>
}

<div class="admin-header">
    <h1>Manage Applications</h1>
    <p>Configure OAuth 2.0 and OpenID Connect applications</p>
</div>

<div class="header-actions">
    <div></div>
    <a href="/Admin/IdentityServer/CreateApplication" class="btn-primary-gradient">
        <i class="fa fa-plus"></i>
        Create Application
    </a>
</div>

@if (Model.Applications == null || !Model.Applications.Any())
{
    <div class="empty-state">
        <i class="fa fa-cube"></i>
        <h3>No applications yet</h3>
        <p>Create your first OAuth application to get started</p>
        <a href="/Admin/IdentityServer/CreateApplication" class="btn-primary-gradient">
            <i class="fa fa-plus"></i>
            Create Application
        </a>
    </div>
}
else
{
    <div class="applications-grid">
        @foreach (var app in Model.Applications)
        {
            <div class="application-card">
                <div class="application-header">
                    <div class="application-info">
                        <h3>@app.DisplayName</h3>
                        <div class="application-client-id">@app.ClientId</div>
                    </div>
                    <div style="display: flex; gap: 1rem; align-items: center;">
                        <span class="application-type-badge type-@(app.ClientType.ToString().ToLower())">
                            @switch (app.ClientType)
                            {
                                case IDP.Models.IdentityServer.ClientType.Spa:
                                    <i class="fa fa-chrome"></i>
                                    <span>SPA</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.Web:
                                    <i class="fa fa-globe"></i>
                                    <span>Web App</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.Native:
                                    <i class="fa fa-mobile"></i>
                                    <span>Native</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.Machine:
                                    <i class="fa fa-server"></i>
                                    <span>M2M</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.Device:
                                    <i class="fa fa-tablet"></i>
                                    <span>Device</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.SpaLegacy:
                                    <i class="fa fa-history"></i>
                                    <span>SPA (Legacy)</span>
                                    break;
                                case IDP.Models.IdentityServer.ClientType.ResourceServer:
                                    <i class="fa fa-shield"></i>
                                    <span>Resource Server</span>
                                    break;
                            }
                        </span>
                        <div class="application-actions">
                            <a href="/Admin/IdentityServer/EditApplication/@app.Id" class="btn-icon" title="Edit">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <button class="btn-icon" onclick="deleteApplication('@app.Id', '@app.DisplayName')" title="Delete">
                                <i class="fa fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(app.Description))
                {
                    <div class="application-description">
                        @app.Description
                    </div>
                }

                <div class="application-meta">
                    @if (app.ClientType == IDP.Models.IdentityServer.ClientType.ResourceServer)
                    {
                        <div class="application-meta-item">
                            <i class="fa fa-search"></i>
                            <span>Token Introspection - Validates access tokens from other applications</span>
                        </div>
                    }
                    else
                    {
                        <div class="application-meta-item">
                            <i class="fa fa-link"></i>
                            <span>@app.RedirectUris?.Count redirect URIs</span>
                        </div>
                        <div class="application-meta-item">
                            <i class="fa fa-shield"></i>
                            <span>@(app.RequirePkce ? "PKCE Required" : "No PKCE")</span>
                        </div>
                        @if (app.AllowOfflineAccess)
                        {
                            <div class="application-meta-item">
                                <i class="fa fa-refresh"></i>
                                <span>Refresh Tokens</span>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
}

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="delete-modal-content">
        <div class="delete-modal-header">
            <h3>
                <i class="fa fa-exclamation-triangle"></i>
                Confirm Deletion
            </h3>
        </div>
        <form id="deleteForm">
            @Html.AntiForgeryToken()
            <div class="delete-modal-body">
                <p id="deleteMessage"></p>
                <div class="password-input-group">
                    <label for="deletePassword">Enter your password to confirm:</label>
                    <input type="password" id="deletePassword" name="password" class="form-control" required autocomplete="current-password" />
                    <div id="passwordError" class="error-message"></div>
                </div>
            </div>
            <div class="delete-modal-footer">
                <button type="button" class="btn-cancel" onclick="closeDeleteModal()">Cancel</button>
                <button type="submit" class="btn-delete" id="confirmDeleteBtn">
                    <i class="fa fa-trash"></i> Delete Application
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        let applicationToDelete = null;

        function deleteApplication(id, name) {
            applicationToDelete = { id, name };
            document.getElementById('deleteMessage').textContent = `Are you sure you want to delete "${name}"? This action cannot be undone.`;
            document.getElementById('deletePassword').value = '';
            document.getElementById('passwordError').classList.remove('show');
            document.getElementById('deleteModal').classList.add('show');
            setTimeout(() => document.getElementById('deletePassword').focus(), 100);
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('show');
            applicationToDelete = null;
        }

        document.getElementById('deleteForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const password = document.getElementById('deletePassword').value;
            const errorDiv = document.getElementById('passwordError');
            const submitBtn = document.getElementById('confirmDeleteBtn');

            if (!applicationToDelete) return;

            errorDiv.classList.remove('show');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Deleting...';

            try {
                const formData = new FormData();
                formData.append('id', applicationToDelete.id);
                formData.append('password', password);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('?handler=Delete', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    closeDeleteModal();
                    window.location.reload();
                } else {
                    errorDiv.textContent = result.error || 'Failed to delete application';
                    errorDiv.classList.add('show');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fa fa-trash"></i> Delete Application';
                }
            } catch (error) {
                console.error('Error:', error);
                errorDiv.textContent = 'An error occurred while deleting the application';
                errorDiv.classList.add('show');
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="fa fa-trash"></i> Delete Application';
            }
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('deleteModal');
            if (event.target === modal) {
                closeDeleteModal();
            }
        }
    </script>
}
