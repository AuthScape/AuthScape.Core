<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
<script>
    let currentPage = 1;
    let currentFilters = {};
    let currentErrorGroupId = null;
    let connection = null;

    // Load stats on page load
    document.addEventListener('DOMContentLoaded', function() {
        loadStats();
        loadErrors();
        initSignalR();
    });

    // Initialize SignalR connection for real-time updates
    async function initSignalR() {
        try {
            // Connect to the IDP's own SignalR hub (same origin)
            connection = new signalR.HubConnectionBuilder()
                .withUrl('/errortracking')
                .withAutomaticReconnect([0, 2000, 5000, 10000, 30000])
                .configureLogging(signalR.LogLevel.Information)
                .build();

            // Handle new error events
            connection.on('NewError', function(error) {
                console.log('New error received:', error);
                showNewErrorToast(error);
                loadStats();
                // Only auto-refresh if on first page with no specific filters
                if (currentPage === 1 && Object.keys(currentFilters).length === 0) {
                    loadErrors(1);
                }
            });

            // Handle reconnection
            connection.onreconnected(function() {
                console.log('SignalR reconnected');
                joinErrorTracking();
            });

            connection.onclose(function() {
                console.log('SignalR connection closed');
                updateConnectionStatus(false);
            });

            await connection.start();
            console.log('SignalR connected');
            await joinErrorTracking();
            updateConnectionStatus(true);
        } catch (err) {
            console.error('SignalR connection error:', err);
            updateConnectionStatus(false);
        }
    }

    async function joinErrorTracking() {
        if (connection && connection.state === signalR.HubConnectionState.Connected) {
            await connection.invoke('JoinErrorTracking');
        }
    }

    function updateConnectionStatus(connected) {
        const refreshBtn = document.querySelector('button[onclick="refreshErrors()"]');
        if (refreshBtn) {
            if (connected) {
                refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> <span class="badge bg-success ms-1" title="Real-time updates active"><i class="fas fa-bolt"></i></span>';
            } else {
                refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Refresh';
            }
        }
    }

    function showNewErrorToast(error) {
        // Create toast notification for new error
        const toastContainer = document.getElementById('toast-container') || createToastContainer();

        const toast = document.createElement('div');
        toast.className = 'toast show';
        toast.setAttribute('role', 'alert');
        toast.innerHTML = `
            <div class="toast-header bg-danger text-white">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong class="me-auto">New Error</strong>
                <small>Just now</small>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <strong>${error.statusCode}</strong> - ${escapeHtml(error.errorMessage?.substring(0, 100) || 'Unknown error')}
                <div class="mt-2">
                    <small class="text-muted">${error.endpoint || 'N/A'}</small>
                </div>
            </div>
        `;

        toastContainer.appendChild(toast);

        // Auto-remove after 5 seconds
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => toast.remove(), 300);
        }, 5000);
    }

    function createToastContainer() {
        const container = document.createElement('div');
        container.id = 'toast-container';
        container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
        container.style.zIndex = '1080';
        document.body.appendChild(container);
        return container;
    }

    async function loadStats() {
        try {
            const response = await axios.get('/api/ErrorTracking/GetStats?hours=24');
            const stats = response.data;

            document.getElementById('stat-total').textContent = stats.totalErrors;
            document.getElementById('stat-unique').textContent = stats.uniqueTypes;
            document.getElementById('stat-unresolved').textContent = stats.unresolvedCount;
            document.getElementById('stat-resolved').textContent = stats.resolvedCount;
        } catch (error) {
            console.error('Failed to load stats:', error);
        }
    }

    async function loadErrors(page = 1) {
        const tbody = document.getElementById('error-groups-tbody');
        tbody.innerHTML = `
            <tr>
                <td colspan="8" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="text-muted mt-2">Loading errors...</p>
                </td>
            </tr>
        `;

        try {
            const filters = {
                page: page,
                pageSize: 20,
                ...currentFilters
            };

            const response = await axios.post('/api/ErrorTracking/GetErrors', filters);
            const result = response.data;

            if (result.errorGroups.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" class="text-center py-5">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <p class="text-muted">No errors found</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = result.errorGroups.map(error => `
                <tr class="cursor-pointer" onclick="showErrorDetails('${error.id}')">
                    <td>
                        <code class="small">${escapeHtml(error.errorType)}</code>
                    </td>
                    <td>
                        <div class="text-truncate" style="max-width: 300px;" title="${escapeHtml(error.errorMessage)}">
                            ${escapeHtml(error.errorMessage)}
                        </div>
                    </td>
                    <td>
                        <span class="badge badge-source-${error.source === 1 ? 'api' : error.source === 2 ? 'idp' : 'frontend'}">
                            ${error.source === 1 ? 'API' : error.source === 2 ? 'IDP' : 'Frontend'}
                        </span>
                    </td>
                    <td>
                        <span class="badge ${error.statusCode >= 500 ? 'badge-status-5xx' : 'badge-status-4xx'}">
                            ${error.statusCode}
                        </span>
                    </td>
                    <td class="text-center">
                        <span class="badge bg-secondary">${error.occurrenceCount}</span>
                    </td>
                    <td>
                        <small>${formatDate(error.lastSeen)}</small>
                    </td>
                    <td>
                        ${error.isResolved
                            ? '<span class="badge bg-success"><i class="fas fa-check"></i> Resolved</span>'
                            : '<span class="badge bg-warning"><i class="fas fa-clock"></i> Open</span>'
                        }
                    </td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation(); showErrorDetails('${error.id}')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </td>
                </tr>
            `).join('');

            // Update pagination
            updatePagination(result.page, result.totalPages, result.totalCount);

        } catch (error) {
            console.error('Failed to load errors:', error);

            let errorMessage = 'Failed to load errors';
            if (error.response && error.response.status === 500) {
                errorMessage = `Database tables not found. Please run the migration:<br><br>
                    <code style="display: block; text-align: left; padding: 1rem; background: #f5f5f5; border-radius: 4px;">
                    cd "d:\\Development\\AuthScape\\AuthScape.Core\\API"<br>
                    dotnet ef migrations add AddErrorTrackingTables --project "../Services.Database"<br>
                    dotnet ef database update --project "../Services.Database"
                    </code>`;
            }

            tbody.innerHTML = `
                <tr>
                    <td colspan="8" class="text-center py-5 text-danger">
                        <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                        <p>${errorMessage}</p>
                    </td>
                </tr>
            `;
        }
    }

    async function showErrorDetails(errorGroupId) {
        currentErrorGroupId = errorGroupId;

        try {
            const response = await axios.get(`/api/ErrorTracking/GetErrorGroup?id=${errorGroupId}&page=1&pageSize=10`);
            const data = response.data;

            if (data.occurrences.length === 0) return;

            const firstError = data.occurrences[0];
            const errorGroup = firstError.errorGroup || {};
            const statusCode = firstError.statusCode;

            // Update header gradient based on status code
            const modalHeader = document.getElementById('modal-header-bg');
            modalHeader.classList.remove('modal-header-4xx', 'modal-header-5xx');
            if (statusCode >= 500) {
                modalHeader.classList.add('modal-header-5xx');
            } else if (statusCode >= 400) {
                modalHeader.classList.add('modal-header-4xx');
            }

            // Update source badge
            const sourceBadge = document.getElementById('detail-source-badge');
            const sourceText = firstError.source === 1 ? 'API' : firstError.source === 2 ? 'IDP' : 'Frontend';
            sourceBadge.textContent = sourceText;

            // Populate modal
            document.getElementById('modal-subtitle').textContent = `ID: ${errorGroupId.substring(0, 8)}...`;
            document.getElementById('detail-message').textContent = firstError.errorMessage;
            document.getElementById('detail-type').textContent = firstError.errorType;
            document.getElementById('detail-endpoint').textContent = `${firstError.httpMethod || 'GET'} ${firstError.endpoint || 'N/A'}`;

            const statusBadge = document.getElementById('detail-statusCode');
            statusBadge.textContent = statusCode;
            statusBadge.className = `badge rounded-pill ${statusCode >= 500 ? 'bg-danger' : 'bg-warning text-dark'}`;

            document.getElementById('detail-occurrences-count').textContent = errorGroup.occurrenceCount || data.occurrences.length;
            document.getElementById('detail-firstSeen').textContent = formatDate(errorGroup.firstSeen || firstError.created);
            document.getElementById('detail-lastSeen').textContent = formatDate(errorGroup.lastSeen || firstError.created);
            document.getElementById('detail-stackTrace').textContent = firstError.stackTrace || 'No stack trace available';

            // Recent occurrences table
            const occurrencesTbody = document.getElementById('detail-occurrences-table');
            occurrencesTbody.innerHTML = data.occurrences.map(occ => {
                const responseTime = occ.responseTimeMs;
                let responseClass = 'fast';
                if (responseTime > 1000) responseClass = 'slow';
                else if (responseTime > 500) responseClass = 'medium';

                return `
                    <tr>
                        <td>
                            <div class="occurrence-time">
                                <span class="time-dot"></span>
                                <span>${formatDate(occ.created)}</span>
                            </div>
                        </td>
                        <td>
                            <span class="fw-medium">${occ.username || occ.userEmail || 'Anonymous'}</span>
                        </td>
                        <td>
                            <code class="bg-light px-2 py-1 rounded small">${occ.ipAddress || 'N/A'}</code>
                        </td>
                        <td>
                            <span class="browser-badge">
                                <i class="fas fa-${getBrowserIcon(occ.browser)}"></i>
                                ${occ.browser || 'Unknown'} ${occ.browserVersion || ''}
                            </span>
                        </td>
                        <td class="text-end">
                            ${responseTime ? `<span class="response-time-badge ${responseClass}">${responseTime}ms</span>` : '<span class="text-muted">N/A</span>'}
                        </td>
                    </tr>
                `;
            }).join('');

            // Resolution section
            if (firstError.isResolved) {
                document.getElementById('resolution-section').classList.add('d-none');
                document.getElementById('resolved-info').classList.remove('d-none');
                document.getElementById('resolved-details').innerHTML = `
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted d-block mb-1">Resolved At</small>
                            <span class="fw-semibold">${formatDate(firstError.resolvedAt)}</span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block mb-1">Resolved By</small>
                            <span class="fw-semibold">User #${firstError.resolvedByUserId || 'Unknown'}</span>
                        </div>
                    </div>
                    <hr>
                    <small class="text-muted d-block mb-1">Resolution Notes</small>
                    <p class="mb-0">${escapeHtml(firstError.resolutionNotes || 'No notes provided')}</p>
                `;
            } else {
                document.getElementById('resolution-section').classList.remove('d-none');
                document.getElementById('resolved-info').classList.add('d-none');
                document.getElementById('resolution-notes').value = '';
            }

            // Reset tabs to first tab
            const firstTab = document.querySelector('#stacktrace-tab');
            const bsTab = new bootstrap.Tab(firstTab);
            bsTab.show();

            const modal = new bootstrap.Modal(document.getElementById('errorDetailsModal'));
            modal.show();

        } catch (error) {
            console.error('Failed to load error details:', error);
            alert('Failed to load error details');
        }
    }

    function getBrowserIcon(browser) {
        if (!browser) return 'globe';
        const b = browser.toLowerCase();
        if (b.includes('chrome')) return 'chrome';
        if (b.includes('firefox')) return 'firefox';
        if (b.includes('safari')) return 'safari';
        if (b.includes('edge')) return 'edge';
        if (b.includes('opera')) return 'opera';
        if (b.includes('ie') || b.includes('internet explorer')) return 'internet-explorer';
        return 'globe';
    }

    function copyStackTrace() {
        const stackTrace = document.getElementById('detail-stackTrace').textContent;
        navigator.clipboard.writeText(stackTrace).then(() => {
            // Show a brief toast or change button text
            const btn = event.target.closest('button');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-check"></i>';
            btn.classList.remove('btn-outline-secondary');
            btn.classList.add('btn-success');
            setTimeout(() => {
                btn.innerHTML = originalHtml;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-outline-secondary');
            }, 2000);
        });
    }

    async function markAsResolved() {
        const notes = document.getElementById('resolution-notes').value;

        if (!notes.trim()) {
            alert('Please provide resolution notes');
            return;
        }

        try {
            await axios.put('/api/ErrorTracking/MarkResolved', {
                errorGroupId: currentErrorGroupId,
                resolutionNotes: notes
            });

            alert('Error marked as resolved!');

            const modal = bootstrap.Modal.getInstance(document.getElementById('errorDetailsModal'));
            modal.hide();

            loadErrors(currentPage);
            loadStats();

        } catch (error) {
            console.error('Failed to mark error as resolved:', error);
            alert('Failed to mark error as resolved');
        }
    }

    function applyFilters() {
        const source = document.getElementById('filter-source').value;
        const statusCode = document.getElementById('filter-statusCode').value;
        const resolved = document.getElementById('filter-resolved').value;
        const dateRange = document.getElementById('filter-dateRange').value;
        const search = document.getElementById('filter-search').value;

        currentFilters = {};

        if (source) currentFilters.source = parseInt(source);
        if (statusCode) currentFilters.statusCode = parseInt(statusCode);
        if (resolved) currentFilters.isResolved = resolved === 'true';
        if (search) currentFilters.searchTerm = search;

        if (dateRange) {
            const hours = parseInt(dateRange);
            currentFilters.startDate = new Date(Date.now() - hours * 60 * 60 * 1000).toISOString();
        }

        currentPage = 1;
        loadErrors(1);
    }

    function refreshErrors() {
        loadStats();
        loadErrors(currentPage);
    }

    function updatePagination(page, totalPages, totalCount) {
        document.getElementById('pagination-info').textContent =
            `Showing page ${page} of ${totalPages} (${totalCount} total errors)`;

        const pagination = document.getElementById('pagination');

        if (totalPages <= 1) {
            pagination.innerHTML = '';
            return;
        }

        let html = '';

        // Previous button
        html += `
            <li class="page-item ${page === 1 ? 'disabled' : ''}">
                <a class="page-link" href="#" onclick="loadErrors(${page - 1}); return false;">Previous</a>
            </li>
        `;

        // Page numbers
        for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) {
            html += `
                <li class="page-item ${i === page ? 'active' : ''}">
                    <a class="page-link" href="#" onclick="loadErrors(${i}); return false;">${i}</a>
                </li>
            `;
        }

        // Next button
        html += `
            <li class="page-item ${page === totalPages ? 'disabled' : ''}">
                <a class="page-link" href="#" onclick="loadErrors(${page + 1}); return false;">Next</a>
            </li>
        `;

        pagination.innerHTML = html;
        currentPage = page;
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const diffMs = now - date;
        const diffMins = Math.floor(diffMs / 60000);
        const diffHours = Math.floor(diffMs / 3600000);
        const diffDays = Math.floor(diffMs / 86400000);

        if (diffMins < 1) return 'Just now';
        if (diffMins < 60) return `${diffMins}m ago`;
        if (diffHours < 24) return `${diffHours}h ago`;
        if (diffDays < 7) return `${diffDays}d ago`;

        return date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
</script>
