@page
@model AuthScape.IDP.Areas.Admin.Pages.System.ErrorLogsModel
@{
    ViewData["Title"] = "Error Tracking";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Error Tracking</h2>
            <p class="text-muted mb-0">Monitor and resolve application errors across API, IDP, and Frontend</p>
        </div>
        <div>
            <button type="button" class="btn btn-outline-primary" onclick="refreshErrors()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <a href="/Admin/System/ErrorTrackingSettings" class="btn btn-primary">
                <i class="fas fa-cog"></i> Settings
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4" id="statsCards">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Total Errors (24h)</p>
                            <h3 class="mb-0" id="stat-total">-</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="fas fa-exclamation-triangle text-danger fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Unique Types</p>
                            <h3 class="mb-0" id="stat-unique">-</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="fas fa-layer-group text-info fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Unresolved</p>
                            <h3 class="mb-0" id="stat-unresolved">-</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="fas fa-clock text-warning fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small">Resolved</p>
                            <h3 class="mb-0" id="stat-resolved">-</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="fas fa-check-circle text-success fa-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Panel -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-2">
                    <label class="form-label small">Source</label>
                    <select class="form-select" id="filter-source">
                        <option value="">All Sources</option>
                        <option value="1">API</option>
                        <option value="2">IDP</option>
                        <option value="3">Frontend</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Status Code</label>
                    <input type="number" class="form-control" id="filter-statusCode" placeholder="e.g. 500">
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Status</label>
                    <select class="form-select" id="filter-resolved">
                        <option value="">All</option>
                        <option value="false">Unresolved</option>
                        <option value="true">Resolved</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small">Date Range</label>
                    <select class="form-select" id="filter-dateRange">
                        <option value="24">Last 24 hours</option>
                        <option value="168">Last 7 days</option>
                        <option value="720">Last 30 days</option>
                        <option value="2160">Last 90 days</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small">Search</label>
                    <input type="text" class="form-control" id="filter-search" placeholder="Error message or type...">
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button class="btn btn-primary w-100" onclick="applyFilters()">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Groups Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Error Type</th>
                            <th>Message</th>
                            <th>Source</th>
                            <th>Status</th>
                            <th class="text-center">Occurrences</th>
                            <th>Last Seen</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="error-groups-tbody">
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="text-muted mt-2">Loading errors...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted small" id="pagination-info">
                    Showing 0 of 0 errors
                </div>
                <nav>
                    <ul class="pagination mb-0" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Error Details Modal - Modern Design -->
<div class="modal fade" id="errorDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 16px; overflow: hidden;">
            <!-- Header with gradient background -->
            <div class="modal-header border-0 text-white py-4" id="modal-header-bg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="d-flex align-items-center w-100">
                    <div class="error-icon-wrapper me-3" style="background: rgba(255,255,255,0.2); border-radius: 12px; padding: 12px;">
                        <i class="fas fa-exclamation-triangle fa-lg"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="modal-title mb-1 fw-bold">Error Details</h5>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-white bg-opacity-25" id="detail-source-badge">API</span>
                            <span class="opacity-75 small" id="modal-subtitle"></span>
                        </div>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
            </div>

            <div class="modal-body p-0">
                <!-- Error Summary Card -->
                <div class="p-4 bg-light border-bottom">
                    <div class="row g-4">
                        <!-- Error Message -->
                        <div class="col-lg-8">
                            <div class="error-message-card bg-white rounded-3 p-4 h-100 shadow-sm">
                                <div class="d-flex align-items-start mb-3">
                                    <span class="badge rounded-pill me-2" id="detail-statusCode" style="font-size: 0.9rem;"></span>
                                    <code class="text-muted small" id="detail-type"></code>
                                </div>
                                <h5 class="mb-3 text-dark" id="detail-message" style="line-height: 1.5;"></h5>
                                <div class="d-flex align-items-center text-muted small">
                                    <i class="fas fa-link me-2"></i>
                                    <code class="bg-light px-2 py-1 rounded" id="detail-endpoint" style="font-size: 0.85rem;"></code>
                                </div>
                            </div>
                        </div>

                        <!-- Stats Cards -->
                        <div class="col-lg-4">
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="stat-card bg-white rounded-3 p-3 shadow-sm text-center">
                                        <div class="stat-icon mb-2" style="color: #667eea;">
                                            <i class="fas fa-chart-line fa-lg"></i>
                                        </div>
                                        <h3 class="mb-0 fw-bold" id="detail-occurrences-count" style="color: #667eea;"></h3>
                                        <small class="text-muted">Total Occurrences</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="stat-card bg-white rounded-3 p-3 shadow-sm">
                                        <div class="d-flex align-items-center mb-1">
                                            <i class="fas fa-clock text-info me-2 small"></i>
                                            <small class="text-muted">First Seen</small>
                                        </div>
                                        <p class="mb-0 fw-semibold small" id="detail-firstSeen"></p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="stat-card bg-white rounded-3 p-3 shadow-sm">
                                        <div class="d-flex align-items-center mb-1">
                                            <i class="fas fa-history text-warning me-2 small"></i>
                                            <small class="text-muted">Last Seen</small>
                                        </div>
                                        <p class="mb-0 fw-semibold small" id="detail-lastSeen"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabs Section -->
                <div class="px-4 pt-4">
                    <ul class="nav nav-pills nav-fill gap-2 p-1 bg-light rounded-3" id="errorDetailTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active rounded-3 px-4" id="stacktrace-tab" data-bs-toggle="pill" data-bs-target="#stacktrace-panel" type="button">
                                <i class="fas fa-code me-2"></i>Stack Trace
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-3 px-4" id="occurrences-tab" data-bs-toggle="pill" data-bs-target="#occurrences-panel" type="button">
                                <i class="fas fa-list me-2"></i>Occurrences
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-3 px-4" id="resolution-tab" data-bs-toggle="pill" data-bs-target="#resolution-panel" type="button">
                                <i class="fas fa-check-circle me-2"></i>Resolution
                            </button>
                        </li>
                    </ul>
                </div>

                <!-- Tab Content -->
                <div class="tab-content p-4" id="errorDetailTabContent">
                    <!-- Stack Trace Panel -->
                    <div class="tab-pane fade show active" id="stacktrace-panel" role="tabpanel">
                        <div class="stack-trace-wrapper position-relative">
                            <button class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0 m-2" onclick="copyStackTrace()" title="Copy to clipboard">
                                <i class="fas fa-copy"></i>
                            </button>
                            <pre id="detail-stackTrace" class="stack-trace-box m-0"></pre>
                        </div>
                    </div>

                    <!-- Occurrences Panel -->
                    <div class="tab-pane fade" id="occurrences-panel" role="tabpanel">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="border-0 rounded-start">
                                            <i class="fas fa-clock text-muted me-2"></i>Time
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-user text-muted me-2"></i>User
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-globe text-muted me-2"></i>IP Address
                                        </th>
                                        <th class="border-0">
                                            <i class="fas fa-desktop text-muted me-2"></i>Browser
                                        </th>
                                        <th class="border-0 rounded-end text-end">
                                            <i class="fas fa-tachometer-alt text-muted me-2"></i>Response Time
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="detail-occurrences-table">
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Resolution Panel -->
                    <div class="tab-pane fade" id="resolution-panel" role="tabpanel">
                        <div id="resolution-section">
                            <div class="text-center py-4 mb-4">
                                <div class="resolution-icon mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-tools fa-2x text-white"></i>
                                </div>
                                <h5 class="mb-2">Mark This Error as Resolved</h5>
                                <p class="text-muted mb-0">Document the fix to help your team track resolutions</p>
                            </div>

                            <div class="bg-light rounded-3 p-4">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-sticky-note text-muted me-2"></i>Resolution Notes
                                    </label>
                                    <textarea class="form-control border-0 shadow-sm" id="resolution-notes" rows="4" placeholder="Describe the root cause and how this error was fixed..." style="resize: none;"></textarea>
                                </div>
                                <button class="btn btn-success btn-lg w-100 shadow-sm" onclick="markAsResolved()">
                                    <i class="fas fa-check-circle me-2"></i>Mark as Resolved
                                </button>
                            </div>
                        </div>

                        <div class="d-none" id="resolved-info">
                            <div class="text-center py-4">
                                <div class="resolved-icon mb-3" style="width: 80px; height: 80px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-check fa-2x text-white"></i>
                                </div>
                                <h5 class="text-success mb-2">Error Resolved</h5>
                                <p class="text-muted mb-4">This error has been marked as resolved</p>

                                <div class="bg-light rounded-3 p-4 text-start">
                                    <div id="resolved-details"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

