@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuthScape Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        :root {
            --primary-color: #667eea;
            --primary-dark: #764ba2;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            background: var(--gray-50);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 280px;
            background: white;
            border-right: 1px solid var(--gray-200);
            padding: 2rem 1rem;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }

        .admin-content {
            flex: 1;
            margin-left: 280px;
            padding: 3rem;
            max-width: 1400px;
        }

        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            color: white;
        }

        .admin-header h1 {
            color: white;
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
        }

        .admin-header p {
            color: rgba(255, 255, 255, 0.9);
            margin: 0.5rem 0 0;
        }

        .admin-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-nav-section-title {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--gray-500);
            padding: 1rem 0 0.5rem;
            margin-top: 1rem;
        }

        .admin-nav-section-title:first-child {
            margin-top: 0;
            padding-top: 0;
        }

        .admin-nav .nav-item {
            margin-bottom: 0.25rem;
        }

        .admin-nav .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            text-decoration: none;
            color: var(--gray-700);
            font-size: 0.9375rem;
            font-weight: 500;
            transition: all 0.15s ease;
            border: 2px solid transparent;
        }

        .admin-nav .nav-link:hover {
            background: var(--gray-100);
            color: var(--gray-900);
        }

        .admin-nav .nav-link.active {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            color: var(--primary-color);
            font-weight: 600;
            border-color: var(--primary-color);
        }

        .admin-nav .nav-link i {
            font-size: 1.125rem;
            flex-shrink: 0;
            width: 20px;
            text-align: center;
        }

        .admin-brand {
            padding: 0 1rem 1.5rem;
            margin-bottom: 1.5rem;
            border-bottom: 1px solid var(--gray-200);
        }

        .admin-brand h2 {
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .admin-brand p {
            color: var(--gray-500);
            font-size: 0.875rem;
            margin: 0.25rem 0 0;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-container">
        <nav class="admin-sidebar">
            <div class="admin-brand">
                <h2>AuthScape</h2>
                <p>Administration</p>
            </div>
            <ul class="admin-nav">
                <li class="admin-nav-section-title">Overview</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")"
                       asp-area="Admin" asp-page="/Index">
                        <i class="fa fa-dashboard"></i>Dashboard
                    </a>
                </li>

                <li class="admin-nav-section-title mt-3">Identity Server</li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/Applications" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/Applications">
                        <i class="fa fa-cube"></i>Applications
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/Scopes" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/Scopes">
                        <i class="fa fa-tag"></i>API Scopes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/Roles" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/Roles">
                        <i class="fa fa-shield"></i>Roles
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/Permissions" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/Permissions">
                        <i class="fa fa-key"></i>Permissions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/SSOProviders" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/SSOProviders">
                        <i class="fa fa-users"></i>SSO Providers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/IdentityServer/Settings" ? "active" : "")"
                       asp-area="Admin" asp-page="/IdentityServer/Settings">
                        <i class="fa fa-cog"></i>Settings
                    </a>
                </li>

                <li class="admin-nav-section-title mt-3">System</li>
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="fa fa-arrow-left"></i>Back to Site
                    </a>
                </li>
                <li class="nav-item">
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" style="margin: 0;">
                        <button type="submit" class="nav-link" style="width: 100%; background: none; border: none; text-align: left; cursor: pointer;">
                            <i class="fa fa-sign-out"></i>Sign Out
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
