@page
@model IDP.Areas.Admin.Pages.TestClaimsModel
@{
    ViewData["Title"] = "Test Claims";
}

<h1>Current User Claims</h1>

<table class="table">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </tbody>
</table>

<h2>Is Authenticated: @User.Identity.IsAuthenticated</h2>
<h2>Is In Admin Role: @User.IsInRole("Admin")</h2>
<h2>Is In admin Role: @User.IsInRole("admin")</h2>
